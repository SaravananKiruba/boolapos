<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Colors - Updated Theme -->
    <Color x:Key="PrimaryColor">#018da5</Color>
    <Color x:Key="PrimaryLightColor">#0b9b8a</Color>
    <Color x:Key="PrimaryDarkColor">#2c3a8a</Color>
    <Color x:Key="BackgroundColor">#f8fafb</Color>
    <Color x:Key="SurfaceColor">#045b90</Color>
    <Color x:Key="SurfaceSecondaryColor">#e8f4f8</Color>
    <Color x:Key="TextPrimaryColor">White</Color>
    <Color x:Key="TextSecondaryColor">#ffffff</Color>
    <Color x:Key="TextOnSurfaceColor">#2D3436</Color>
    <Color x:Key="SuccessColor">#0b9b8a</Color>
    <Color x:Key="WarningColor">#eda63b</Color>
    <Color x:Key="ErrorColor">#d63031</Color>
    <Color x:Key="InfoColor">#018da5</Color>
    
    <!-- Frozen Brushes for Better Performance -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" x:Shared="True" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" x:Shared="True" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" x:Shared="True" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" x:Shared="True" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" x:Shared="True" />
    <SolidColorBrush x:Key="SurfaceSecondaryBrush" Color="{StaticResource SurfaceSecondaryColor}" x:Shared="True" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" x:Shared="True" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" x:Shared="True" />
    <SolidColorBrush x:Key="TextOnSurfaceBrush" Color="{StaticResource TextOnSurfaceColor}" x:Shared="True" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" x:Shared="True" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" x:Shared="True" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" x:Shared="True" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" x:Shared="True" />
    
    <!-- Navigation specific brush for white text on dark sidebar -->
    <SolidColorBrush x:Key="NavigationTextBrush" Color="White" x:Shared="True" />
</ResourceDictionary>