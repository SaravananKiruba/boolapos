<mah:MetroWindow x:Class="Page_Navigation_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Page_Navigation_App"
        mc:Ignorable="d"
        Title="Boola POS System" 
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        GlowBrush="{StaticResource PrimaryBrush}"
        BorderThickness="1"
        NonActiveGlowBrush="{StaticResource SurfaceBrush}"
        TitleCharacterCasing="Normal"
        TitleForeground="{StaticResource TextPrimaryBrush}"
        WindowTitleBrush="{StaticResource SurfaceBrush}"
        WindowButtonCommandsOverlayBehavior="Never"
        SaveWindowPosition="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Background="{StaticResource SurfaceBrush}"
                CornerRadius="0 15 15 0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="0" Color="#40000000"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!-- Logo & Title -->
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <Image Source="/Images/BOOLA LOGO.png"
                           Width="40"
                           Height="40"
                           Margin="0 0 10 0"/>
                    <TextBlock Text="Boola POS"
                             FontSize="22"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextOnSurfaceBrush}"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Menu Items -->
                <ScrollViewer Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            Margin="0,20">
                    <StackPanel>
                        <!-- Navigation Buttons -->
                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding HomeCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Home"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Home"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding CustomersCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="AccountGroup"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Customers"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding ProductsCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Package"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Products"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding OrdersCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="CartOutline"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Orders"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding TransactionsCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="CashRegister"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Transactions"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding SuppliersCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="TruckDelivery"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Suppliers"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding RateMasterCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="ChartLineVariant"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Rate Master"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding StockCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="PackageVariant"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Stock"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding UserCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="AccountCog"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Users"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding ReportCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="ChartBox"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Reports"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource NavigationButton}"
                                Command="{Binding SettingsCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Cog"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Settings"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextOnSurfaceBrush}"/>
                            </Grid>
                        </Button>

                        <!-- Close Button -->
                        <Button Grid.Row="2"
                                Style="{StaticResource NavigationButton}"
                                Height="45"
                                Margin="20,5"
                                Click="CloseApp_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Logout"
                                                       Width="20"
                                                       Height="20"
                                                       Foreground="{StaticResource ErrorBrush}"/>
                                <TextBlock Grid.Column="1"
                                       Text="Close"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource ErrorBrush}"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1"
                Background="{StaticResource BackgroundBrush}"
                CornerRadius="15 0 0 15"
                Margin="0 0 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Height="80"
                      Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title -->
                    <TextBlock Text="{Binding CurrentView, Converter={StaticResource ViewModelToTitleConverter}}"
                             FontSize="24"
                             FontWeight="Medium"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             VerticalAlignment="Center"/>

                    <!-- User Profile -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentUser}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0 0 10 0"/>
                        <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                Width="40"
                                Height="40"
                                Background="{StaticResource SurfaceBrush}"
                                BorderThickness="0">
                            <iconPacks:PackIconMaterial Kind="AccountCircle"
                                                     Width="24"
                                                     Height="24"
                                                     Foreground="{StaticResource PrimaryBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Main Content -->
                <ContentControl Grid.Row="1" 
                              Content="{Binding CurrentView}"
                              Margin="20">
                    <ContentControl.Resources>
                        <Style TargetType="UserControl">
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                        </Style>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</mah:MetroWindow>
