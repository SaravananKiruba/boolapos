<Window x:Class="Page_Navigation_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Page_Navigation_App"
        mc:Ignorable="d"
        Title="Boola POS System" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True">

    <materialDesign:DialogHost CloseOnClickAway="True" x:Name="DialogHost">
        <materialDesign:DrawerHost>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Navigation Panel -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="0 15 15 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <!-- Logo & Title -->
                        <TextBlock Text="Boola POS"
                                 Foreground="{StaticResource PrimaryBrush}"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Margin="20"/>

                        <!-- Navigation Buttons -->
                        <StackPanel Grid.Row="1">
                            <RadioButton Style="{DynamicResource NavButton}" 
                                       IsChecked="True"
                                       Command="{Binding HomeCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Home" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Home" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding CustomersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountGroup" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Customers" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding ProductsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Package" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Products" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding OrdersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CartOutline" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Orders" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding RateMasterCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartLineVariant" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Rate Master" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding RepairJobsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Tools" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Repair Jobs" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding TransactionsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CashRegister" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Transactions" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Style="{DynamicResource NavButton}" 
                                       Command="{Binding SettingsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Cog" Width="22" Height="22" Margin="10 0"/>
                                    <TextBlock Text="Settings" Margin="10 0"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button Grid.Row="2"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Height="40"
                                Margin="20,10"
                                Command="{Binding LogoutCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" Width="22" Height="22"/>
                                <TextBlock Text="Logout" Margin="10 0"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Border Grid.Column="1"
                        Background="{StaticResource BackgroundBrush}"
                        Margin="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Top Bar -->
                        <Grid Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Page Title -->
                            <TextBlock Text="{Binding CurrentView}"
                                     FontSize="24"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     VerticalAlignment="Center"/>

                            <!-- User Profile -->
                            <StackPanel Grid.Column="1" 
                                      Orientation="Horizontal" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUser}"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0 0 10 0"/>
                                <materialDesign:PackIcon Kind="AccountCircle"
                                                     Width="32"
                                                     Height="32"
                                                     Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Main Content -->
                        <ContentControl Grid.Row="1"
                                      Content="{Binding CurrentView}"/>
                    </Grid>
                </Border>

                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="1"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Orientation="Horizontal"
                          Margin="0,5,10,0">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Height="30" Width="30"
                            Padding="0"
                            Command="{Binding MinimizeCommand}">
                        <materialDesign:PackIcon Kind="WindowMinimize"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Height="30" Width="30"
                            Padding="0"
                            Command="{Binding MaximizeCommand}">
                        <materialDesign:PackIcon Kind="WindowMaximize"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Height="30" Width="30"
                            Padding="0"
                            Command="{Binding CloseCommand}">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>
