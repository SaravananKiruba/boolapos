<mah:MetroWindow x:Class="Page_Navigation_App.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Page_Navigation_App.View"
        mc:Ignorable="d"
        Title="Boola POS Login" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        BorderThickness="1"
        ResizeMode="NoResize"
        ShowCloseButton="False"
        ShowMaxRestoreButton="False"
        ShowMinButton="False"
        WindowStyle="None">

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,30,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="StorefrontOutline"
                                             Width="40"
                                             Height="40"
                                             Margin="0 0 15 0"
                                             Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Boola POS"
                             FontSize="32"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Login to your account"
                         FontSize="16"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,20"/>
            </StackPanel>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" Width="350" Margin="0,0,0,0" VerticalAlignment="Center">
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="Red"
                         TextWrapping="Wrap"
                         TextAlignment="Center"
                         Margin="0,0,0,20"
                         FontWeight="Medium"
                         Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Username -->
                <TextBlock Text="Username" 
                         Foreground="{StaticResource TextSecondaryBrush}" 
                         Margin="0,0,0,5"
                         FontWeight="Medium"/>
                <Grid Margin="0,0,0,20">
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                           mah:TextBoxHelper.Watermark="Enter your username"
                           Style="{StaticResource MahApps.Styles.TextBox}"
                           Height="40"
                           FontSize="14"
                           Padding="40,0,10,0"
                           BorderThickness="0"
                           Background="{StaticResource SurfaceBrush}"
                           Foreground="{StaticResource TextOnSurfaceBrush}"/>
                    <iconPacks:PackIconMaterial Kind="Account" 
                                           Width="20" 
                                           Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="10,0,0,0"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>

                <!-- Password -->
                <TextBlock Text="Password" 
                         Foreground="{StaticResource TextSecondaryBrush}" 
                         Margin="0,0,0,5"
                         FontWeight="Medium"/>
                <Grid Margin="0,0,0,30">
                    <PasswordBox x:Name="PasswordBox"
                               mah:TextBoxHelper.Watermark="Enter your password"
                               Style="{StaticResource MahApps.Styles.PasswordBox}"
                               Height="40"
                               FontSize="14"
                               Padding="40,0,10,0"
                               BorderThickness="0"
                               Background="{StaticResource SurfaceBrush}"
                               Foreground="{StaticResource TextOnSurfaceBrush}"
                               PasswordChanged="PasswordBox_PasswordChanged"/>
                    <iconPacks:PackIconMaterial Kind="Lock" 
                                           Width="20" 
                                           Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="10,0,0,0"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>

                <!-- Login Button Area -->
                <Grid>
                    <!-- Login Button with Visual States -->
                    <Button Content="{Binding IsLoggingIn, Converter={StaticResource LoginButtonTextConverter}, ConverterParameter='LOGIN'}" 
                          Command="{Binding LoginCommand}"
                          CommandParameter="{Binding ElementName=PasswordBox, Path=SecurePassword}"
                          Style="{StaticResource MahApps.Styles.Button.Flat}"
                          Height="45"
                          BorderThickness="0"
                          Background="{StaticResource PrimaryBrush}"
                          Foreground="White"
                          FontSize="16"
                          FontWeight="Bold"
                          Margin="0,0,0,15"
                          Cursor="Hand"
                          IsEnabled="{Binding CanLoginEnabled}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                        </Button.Effect>
                    </Button>
                    
                    <!-- Overlay login indicator when IsLoggingIn is true -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center" 
                              Visibility="{Binding IsLoggingIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <mah:ProgressRing IsActive="True" 
                                      Foreground="White" 
                                      Width="20" 
                                      Height="20" 
                                      Margin="0,0,10,0"/>
                        <TextBlock Text="LOGGING IN..." 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- Loading indicator -->
                <ProgressBar IsIndeterminate="True" 
                           Height="5" 
                           Margin="0,5,0,0" 
                           Visibility="{Binding IsLoggingIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Login Status Text -->
                <TextBlock Text="Please wait, logging in..." 
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="12"
                         TextAlignment="Center"
                         Margin="0,5,0,0"
                         Visibility="{Binding IsLoggingIn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
            
            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                  Height="60" VerticalAlignment="Bottom" 
                  Margin="0,20,0,0">
                <Grid>
                    <Button x:Name="ExitButton" 
                          Content="EXIT APPLICATION" 
                          Click="ExitButton_Click"
                          Style="{StaticResource MahApps.Styles.Button.Flat}" 
                          Height="35" 
                          Width="150"
                          Background="#FFE2E2"
                          Foreground="#555555"
                          FontWeight="Medium"
                          BorderThickness="0"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.2"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</mah:MetroWindow>