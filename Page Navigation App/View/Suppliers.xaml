<UserControl x:Class="Page_Navigation_App.View.Suppliers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Supplier Entry Form -->
        <materialDesign:Card Grid.Column="0"
                            Margin="0 0 10 0"
                            Padding="16">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Supplier Details"
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             Margin="0 0 0 16"/>

                    <TextBox Text="{Binding SelectedSupplier.SupplierName}"
                            materialDesign:HintAssist.Hint="Supplier Name"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.ContactNumber}"
                            materialDesign:HintAssist.Hint="Contact Number"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.ContactPerson}"
                            materialDesign:HintAssist.Hint="Contact Person"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.Email}"
                            materialDesign:HintAssist.Hint="Email"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.Address}"
                            materialDesign:HintAssist.Hint="Address"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Height="60"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.GSTNumber}"
                            materialDesign:HintAssist.Hint="GST Number"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.WhatsAppNumber}"
                            materialDesign:HintAssist.Hint="WhatsApp Number"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <!-- Bank Details -->
                    <TextBox Text="{Binding SelectedSupplier.BankName}"
                            materialDesign:HintAssist.Hint="Bank Name"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.AccountNumber}"
                            materialDesign:HintAssist.Hint="Account Number"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.IFSCCode}"
                            materialDesign:HintAssist.Hint="IFSC Code"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.CreditLimit}"
                            materialDesign:HintAssist.Hint="Credit Limit"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <TextBox Text="{Binding SelectedSupplier.PaymentTerms}"
                            materialDesign:HintAssist.Hint="Payment Terms"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0 8"/>

                    <CheckBox IsChecked="{Binding SelectedSupplier.IsActive}"
                             Content="Active"
                             Style="{StaticResource MaterialDesignCheckBox}"
                             Margin="0 8"/>

                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              Margin="0 16 0 0">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding ClearCommand}"
                                Content="Clear"
                                Margin="0 0 8 0"/>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding AddOrUpdateCommand}"
                                Content="Save Supplier"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>

        <!-- Right Panel - Supplier List and Transactions -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Panel -->
            <materialDesign:Card Grid.Row="0"
                                Padding="16"
                                Margin="0 0 0 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                            Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Search suppliers..."
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding SearchCommand}"
                            Content="Search"
                            Margin="8 0 0 0"/>
                </Grid>
            </materialDesign:Card>

            <!-- Suppliers List -->
            <materialDesign:Card Grid.Row="1" Padding="0">
                <DataGrid ItemsSource="{Binding Suppliers}"
                          SelectedItem="{Binding SelectedSupplier}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                          Binding="{Binding SupplierName}"/>
                        <DataGridTextColumn Header="Contact"
                                          Binding="{Binding ContactNumber}"/>
                        <DataGridTextColumn Header="Contact Person"
                                          Binding="{Binding ContactPerson}"/>
                        <DataGridTextColumn Header="Balance"
                                          Binding="{Binding CurrentBalance, StringFormat=C2}"/>
                        <DataGridTextColumn Header="Status"
                                          Binding="{Binding IsActive}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- Transaction Panel -->
            <materialDesign:Card Grid.Row="2"
                                Padding="16"
                                Margin="0 10 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                            Text="{Binding TransactionAmount}"
                            materialDesign:HintAssist.Hint="Amount"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBox Grid.Column="1"
                            Text="{Binding ReferenceNumber}"
                            materialDesign:HintAssist.Hint="Reference #"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Width="120"
                            Margin="8 0"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding RecordPurchaseCommand}"
                            Content="Record Purchase"
                            Margin="0 0 8 0"/>

                    <Button Grid.Column="3"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding RecordPaymentCommand}"
                            Content="Record Payment"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>