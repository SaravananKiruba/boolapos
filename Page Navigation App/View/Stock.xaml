<UserControl x:Class="Page_Navigation_App.View.Stock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Purchase Modal Popup -->
        <Grid Visibility="{Binding IsPurchaseModalOpen, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Panel.ZIndex="100" 
              Grid.ColumnSpan="2">
            <Border Background="#80000000" 
                    MouseDown="CloseModalOnBackgroundClick"/>
            <Border Background="White" 
                    CornerRadius="15" 
                    Width="500" 
                    MaxHeight="600"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                      ShadowDepth="3" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Add Purchase" 
                                   FontSize="22" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <Button Content="×" 
                                Command="{Binding ClosePurchaseModalCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Circle}"
                                Height="30" 
                                Width="30" 
                                Margin="20,0,0,0" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                FontSize="16" 
                                FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Product Selection -->
                            <TextBlock Text="Select Product" 
                                       FontWeight="Medium" 
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Products}"
                                      DisplayMemberPath="ProductName"
                                      SelectedValue="{Binding SelectedProductId}"
                                      SelectedValuePath="ProductID"
                                      mah:TextBoxHelper.Watermark="Select Product"
                                      Margin="0,0,0,15"
                                      Height="38"
                                      mah:ControlsHelper.CornerRadius="5"/>

                            <!-- Supplier Selection -->
                            <TextBlock Text="Select Supplier" 
                                       FontWeight="Medium" 
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Suppliers}"
                                      DisplayMemberPath="SupplierName"
                                      SelectedValue="{Binding SelectedSupplierId}"
                                      SelectedValuePath="SupplierID"
                                      mah:TextBoxHelper.Watermark="Select Supplier"
                                      Margin="0,0,0,15"
                                      Height="38"
                                      mah:ControlsHelper.CornerRadius="5"/>

                            <!-- Quantity and Rate -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Quantity" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,5"/>
                                    <mah:NumericUpDown Value="{Binding NewPurchase.QuantityPurchased}"
                                                       Minimum="0"
                                                       StringFormat="N3"
                                                       Height="38"
                                                       mah:ControlsHelper.CornerRadius="5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Purchase Rate" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,5"/>
                                    <mah:NumericUpDown Value="{Binding NewPurchase.PurchaseRate}"
                                                       StringFormat="C2"
                                                       Minimum="0"
                                                       Height="38"
                                                       mah:ControlsHelper.CornerRadius="5"/>
                                </StackPanel>
                            </Grid>

                            <!-- Invoice Number and Payment Status -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Invoice Number" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding NewPurchase.InvoiceNumber}"
                                             mah:TextBoxHelper.Watermark="Invoice #"
                                             Height="38"
                                             mah:ControlsHelper.CornerRadius="5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Payment Status" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,5"/>
                                    <ComboBox SelectedValue="{Binding NewPurchase.PaymentStatus}"
                                              Height="38"
                                              mah:ControlsHelper.CornerRadius="5">
                                        <ComboBoxItem>Paid</ComboBoxItem>
                                        <ComboBoxItem>Pending</ComboBoxItem>
                                        <ComboBoxItem>Partial</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Notes -->
                            <TextBlock Text="Notes" 
                                       FontWeight="Medium" 
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding NewPurchase.Notes}"
                                     mah:TextBoxHelper.Watermark="Additional notes"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="60"
                                     mah:ControlsHelper.CornerRadius="5"
                                     Margin="0,0,0,15"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Command="{Binding ClosePurchaseModalCommand}" 
                                Style="{StaticResource MahApps.Styles.Button}"
                                mah:ControlsHelper.CornerRadius="8"
                                Height="40" 
                                Width="120" 
                                Margin="0,0,10,0"/>
                        <Button Content="Add Purchase" 
                                Command="{Binding AddPurchaseCommand}" 
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                mah:ControlsHelper.CornerRadius="8"
                                Height="40" 
                                Width="150"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Stock Entry Form with standardized visual design -->
        <Border Background="#FFFFFF"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                        ShadowDepth="1"
                        Opacity="0.2"/>
            </Border.Effect>
            <mah:MetroHeader Header="Stock Details" Margin="5">
                <mah:MetroContentControl>
                    <StackPanel Margin="10">
                        <!-- Product Selection with visual grouping -->
                        <Border Background="#F9F9F9"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Product Information" 
                                        Style="{StaticResource MahApps.Styles.TextBlock}" 
                                        FontWeight="Bold"
                                        Foreground="#2D3748"
                                        Margin="0,0,0,10"/>
                                        
                                <ComboBox ItemsSource="{Binding Products}"
                                        DisplayMemberPath="ProductName"
                                        SelectedValue="{Binding SelectedStock.ProductID}"
                                        SelectedValuePath="ProductID"
                                        Margin="0,5"
                                        mah:TextBoxHelper.Watermark="Select Product"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Style="{StaticResource MahApps.Styles.ComboBox}"/>

                                <ComboBox ItemsSource="{Binding Locations}"
                                        SelectedValue="{Binding SelectedLocation}"
                                        Margin="0,5"
                                        IsEditable="True"
                                        mah:TextBoxHelper.Watermark="Location"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Style="{StaticResource MahApps.Styles.ComboBox}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Quantity and Price with visual grouping -->
                        <Border Background="#F9F9F9"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Stock Details" 
                                        Style="{StaticResource MahApps.Styles.TextBlock}" 
                                        FontWeight="Bold"
                                        Foreground="#2D3748"
                                        Margin="0,0,0,10"/>
                                        
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <mah:NumericUpDown Grid.Column="0"
                                                    Value="{Binding Quantity}"
                                                    Margin="0,5,5,5"
                                                    mah:TextBoxHelper.Watermark="Quantity"
                                                    mah:ControlsHelper.CornerRadius="5"
                                                    Style="{StaticResource {x:Type mah:NumericUpDown}}"
                                                    StringFormat="N3"
                                                    Minimum="0"/>
                                    
                                    <mah:NumericUpDown Grid.Column="1"
                                                    Value="{Binding SelectedStock.PurchasePrice}"
                                                    Margin="5,5,0,5"
                                                    mah:TextBoxHelper.Watermark="Purchase Price"
                                                    mah:ControlsHelper.CornerRadius="5"
                                                    Style="{StaticResource {x:Type mah:NumericUpDown}}"
                                                    StringFormat="C2"
                                                    Minimum="0"/>
                                </Grid>
                                
                                <mah:ToggleSwitch Header="Dead Stock Status"
                                                IsOn="{Binding SelectedStock.IsDeadStock}"
                                                OnContent="Yes"
                                                OffContent="No"
                                                Style="{StaticResource MahApps.Styles.ToggleSwitch}"
                                                Margin="0,10,0,5"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- New Purchase Button -->
                        <Border Background="#F9F9F9"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,0,0,15">
                            <Button Content="New Purchase"
                                  Command="{Binding OpenPurchaseModalCommand}"
                                  mah:ControlsHelper.CornerRadius="8"
                                  Height="45"
                                  Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                  Margin="0">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="CartPlus" 
                                                                     Width="20" 
                                                                     Height="20"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,10,0"/>
                                            <TextBlock Text="New Purchase" 
                                                     FontSize="14"
                                                     FontWeight="Medium"
                                                     VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                  Margin="0,20,0,0"
                                  HorizontalAlignment="Right">
                            <Button Content="Clear"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource MahApps.Styles.Button}"
                                    mah:ControlsHelper.CornerRadius="5"
                                    Padding="15,8"
                                    Command="{Binding ClearCommand}">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="5"
                                            ShadowDepth="1"
                                            Opacity="0.3"/>
                                </Button.Effect>
                            </Button>
                            
                            <Button Content="Save"
                                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                    mah:ControlsHelper.CornerRadius="5"
                                    Padding="15,8"
                                    Command="{Binding AddOrUpdateCommand}">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="5"
                                            ShadowDepth="1"
                                            Opacity="0.3"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>

                        <!-- Stock Transfer Section with visual grouping -->
                        <Border Background="#F9F9F9"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Transfer Stock" 
                                        Style="{StaticResource MahApps.Styles.TextBlock}" 
                                        FontWeight="Bold"
                                        Foreground="#2D3748"
                                        Margin="0,0,0,10"/>
                                        
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox ItemsSource="{Binding Locations}"
                                            SelectedValue="{Binding TransferLocation}"
                                            Margin="0,0,10,0"
                                            IsEditable="True"
                                            mah:TextBoxHelper.Watermark="Transfer To Location"
                                            mah:ControlsHelper.CornerRadius="5"
                                            Style="{StaticResource MahApps.Styles.ComboBox}"/>

                                    <Button Grid.Column="1"
                                            Content="Transfer"
                                            Style="{StaticResource MahApps.Styles.Button}"
                                            mah:ControlsHelper.CornerRadius="5"
                                            Padding="15,8"
                                            Command="{Binding TransferCommand}">
                                        <Button.Effect>
                                            <DropShadowEffect BlurRadius="5"
                                                    ShadowDepth="1"
                                                    Opacity="0.3"/>
                                        </Button.Effect>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </mah:MetroContentControl>
            </mah:MetroHeader>
        </Border>

        <!-- Stock List with enhanced design -->
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search and Filter Controls -->
            <Border Background="#FFFFFF"
                    CornerRadius="10"
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                            ShadowDepth="1"
                            Opacity="0.2"/>
                </Border.Effect>
                <mah:MetroHeader Header="Search and Filter" Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                mah:TextBoxHelper.Watermark="Search stocks..."
                                mah:TextBoxHelper.UseFloatingWatermark="True"
                                mah:ControlsHelper.CornerRadius="20"
                                Padding="30,5,5,5"
                                Style="{StaticResource MahApps.Styles.TextBox}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <iconPacks:PackIconMaterial Kind="Magnify"
                                                Width="16"
                                                Height="16"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                Foreground="#777777"/>

                        <Button Grid.Column="1"
                                Margin="10,0"
                                Style="{StaticResource MahApps.Styles.Button}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="10,8"
                                Command="{Binding LoadDeadStockCommand}">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="CalendarClock" 
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="Dead Stock"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="10,8"
                                Command="{Binding LoadLowStockCommand}">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ChartLineVariant" 
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="Low Stock"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </mah:MetroHeader>
            </Border>

            <!-- Stock Grid -->
            <Border Grid.Row="1"
                    Background="#FFFFFF"
                    CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                            ShadowDepth="1"
                            Opacity="0.2"/>
                </Border.Effect>
                <mah:MetroHeader Header="Stock Inventory" Margin="5">
                    <DataGrid Margin="10"
                            ItemsSource="{Binding Stocks}"
                            SelectedItem="{Binding SelectedStock}"
                            AutoGenerateColumns="False"
                            Style="{StaticResource MahApps.Styles.DataGrid}"
                            GridLinesVisibility="Horizontal"
                            SelectionMode="Single"
                            IsReadOnly="True"
                            AlternatingRowBackground="#F9F9F9"
                            RowHeight="45"
                            BorderThickness="0"
                            VerticalGridLinesBrush="Transparent">
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                        Color="#E3F2FD"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                        Color="#E3F2FD"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                        Color="Black"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                        Color="Black"/>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" 
                                            Binding="{Binding Product.ProductName}"
                                            Width="*"/>
                            <DataGridTextColumn Header="Location" 
                                            Binding="{Binding Location}"
                                            Width="100"/>
                            <DataGridTextColumn Header="Quantity" 
                                            Binding="{Binding Quantity, StringFormat=N3}"
                                            Width="100"/>
                            <DataGridTextColumn Header="Purchase Price" 
                                            Binding="{Binding PurchasePrice, StringFormat=₹ {0:N2}}"
                                            Width="120"/>
                            <DataGridTextColumn Header="Days in Stock" 
                                            Binding="{Binding DaysInStock}"
                                            Width="100"/>
                            <DataGridTextColumn Header="Status" 
                                            Binding="{Binding StockStatus}"
                                            Width="100"/>
                            <DataGridTextColumn Header="Last Updated" 
                                            Binding="{Binding LastUpdated, StringFormat=d}"
                                            Width="100"/>
                            <DataGridTextColumn Header="Last Sold" 
                                            Binding="{Binding LastSold, StringFormat=d}"
                                            Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </mah:MetroHeader>
            </Border>
        </Grid>

        <!-- Grid for Stock Items list modal -->
        <Grid Visibility="{Binding IsStockItemsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
              Grid.ColumnSpan="2"
              Panel.ZIndex="100">
            <Border Background="#80000000" 
                    MouseDown="CloseStockItemsModalOnClick"/>
            <Border Background="White" 
                    CornerRadius="15" 
                    Width="700" 
                    MaxHeight="600"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                      ShadowDepth="3" 
                                      Opacity="0.3"/>
                </Border.Effect>
                
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Stock Item Details" 
                                   FontSize="22" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <Button Content="×" 
                                Command="{Binding CloseStockItemsCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Circle}"
                                Height="30" 
                                Width="30" 
                                Margin="20,0,0,0" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                FontSize="16" 
                                FontWeight="Bold"/>
                    </StackPanel>
                    
                    <!-- Stock Items DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding StockItems}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Margin="0,10"
                              Style="{StaticResource MahApps.Styles.DataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item Code" 
                                              Binding="{Binding StockItemCode}"
                                              Width="*"/>
                            <DataGridTextColumn Header="Product" 
                                              Binding="{Binding Product.ProductName}"
                                              Width="*"/>
                            <DataGridTextColumn Header="Status" 
                                              Binding="{Binding Status}"
                                              Width="100"/>
                            <DataGridTextColumn Header="Added Date" 
                                              Binding="{Binding AddedDate, StringFormat=\{0:dd/MM/yyyy\}}"
                                              Width="100"/>
                            <DataGridTextColumn Header="Sold Date" 
                                              Binding="{Binding SoldDate, StringFormat=\{0:dd/MM/yyyy\}}"
                                              Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Close Button -->
                    <Button Grid.Row="2"
                            Content="Close"
                            Command="{Binding CloseStockItemsCommand}"
                            Style="{StaticResource MahApps.Styles.Button}"
                            mah:ControlsHelper.CornerRadius="8"
                            Height="40"
                            Width="100"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>                <!-- Add Quantity Form - After the existing form -->
                <Grid Grid.Column="0" Margin="0,20,0,0" x:Name="StockAdditionSection">
                    <Border Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="15">
                <StackPanel>
                    <TextBlock Text="Add Stock Quantity"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    <!-- Product Selection -->
                    <TextBlock Text="Select Product"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Products}"
                              DisplayMemberPath="ProductName"
                              SelectedItem="{Binding SelectedProduct}"
                              Height="32"
                              Margin="0,0,0,15"/>
                    
                    <!-- Supplier Selection -->
                    <TextBlock Text="Select Supplier"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Suppliers}"
                              DisplayMemberPath="SupplierName"
                              SelectedItem="{Binding SelectedSupplier}"
                              Height="32"
                              Margin="0,0,0,15"/>
                    
                    <!-- Quantity -->
                    <TextBlock Text="Quantity"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Margin="0,0,0,15"/>
                    
                    <!-- Purchase Rate -->
                    <TextBlock Text="Purchase Rate"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewPurchaseRate, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Margin="0,0,0,15"/>
                    
                    <!-- Total Amount (Calculated) -->
                    <TextBlock Text="Total Amount"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTotalAmount, Mode=OneWay}"
                             IsReadOnly="True"
                             Height="32"
                             Background="#F5F5F5"
                             Margin="0,0,0,15"/>
                    
                    <!-- Add Button -->
                    <Button Content="Add Stock"
                            Command="{Binding AddStockCommand}"
                            Height="38"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>                <!-- Recent Purchases Section -->
                <Border Grid.Column="1" 
                        x:Name="RecentPurchasesSection"
                        Background="#F9F9F9"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15"
                        Margin="20,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Recent Purchases"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding RecentPurchases}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="0,0,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PO Number" 
                                            Binding="{Binding PurchaseOrderNumber}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Date" 
                                            Binding="{Binding PurchaseDate, StringFormat={}{0:MM/dd/yyyy}}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Amount" 
                                            Binding="{Binding TotalAmount, StringFormat=C}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding PaymentStatus}" 
                                            Width="*"/>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Add Expense"
                                            Command="{Binding DataContext.AddExpenseCommand, 
                                            RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                            CommandParameter="{Binding}"
                                            Height="30"
                                            Padding="10,0"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>