<UserControl x:Class="Page_Navigation_App.View.Customers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Customer Entry Form -->
        <mah:MetroHeader Header="Customer Details">
            <mah:MetroContentControl>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
                    <StackPanel>
                        <!-- Basic Information -->
                        <TextBlock Text="Basic Information" Style="{StaticResource MahApps.Styles.TextBlock}" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding SelectedCustomer.CustomerName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="Customer Name"
                                 Style="{StaticResource MahApps.Styles.TextBox}"/>

                        <TextBox Text="{Binding SelectedCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="Phone Number"
                                 Style="{StaticResource MahApps.Styles.TextBox}"/>

                        <TextBox Text="{Binding SelectedCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="Email"
                                 Style="{StaticResource MahApps.Styles.TextBox}"/>

                        <TextBox Text="{Binding SelectedCustomer.WhatsAppNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="WhatsApp Number"
                                 Style="{StaticResource MahApps.Styles.TextBox}"/>

                        <!-- Address Information -->
                        <TextBlock Text="Address Information" Style="{StaticResource MahApps.Styles.TextBlock}" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding SelectedCustomer.Address, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="Address"
                                 Style="{StaticResource MahApps.Styles.TextBox}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"/>

                        <TextBox Text="{Binding SelectedCustomer.City, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="City"
                                 Style="{StaticResource MahApps.Styles.TextBox}"/>

                        <TextBox Text="{Binding SelectedCustomer.GSTNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,5"
                                 mah:TextBoxHelper.Watermark="GST Number"
                                 Style="{StaticResource MahApps.Styles.TextBox}"/>

                        <!-- Customer Type and Dates -->
                        <TextBlock Text="Customer Details" Style="{StaticResource MahApps.Styles.TextBlock}" FontWeight="Bold" Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding CustomerTypes}"
                                  SelectedValue="{Binding SelectedCustomer.CustomerType}"
                                  Margin="0,5"
                                  mah:TextBoxHelper.Watermark="Customer Type"
                                  Style="{StaticResource MahApps.Styles.ComboBox}"/>

                        <mah:DateTimePicker SelectedDateTime="{Binding SelectedCustomer.DateOfBirth}"
                                           Margin="0,5"
                                           mah:TextBoxHelper.Watermark="Date of Birth"
                                           Style="{StaticResource {x:Type mah:DateTimePicker}}"/>

                        <mah:DateTimePicker SelectedDateTime="{Binding SelectedCustomer.DateOfAnniversary}"
                                           Margin="0,5"
                                           mah:TextBoxHelper.Watermark="Anniversary Date"
                                           Style="{StaticResource {x:Type mah:DateTimePicker}}"/>

                        <mah:DateTimePicker SelectedDateTime="{Binding SelectedCustomer.RegistrationDate}"
                                           Margin="0,5"
                                           mah:TextBoxHelper.Watermark="Registration Date"
                                           IsEnabled="False"
                                           Style="{StaticResource {x:Type mah:DateTimePicker}}"/>

                        <!-- Loyalty and Credit -->
                        <TextBlock Text="Loyalty and Credit" Style="{StaticResource MahApps.Styles.TextBlock}" FontWeight="Bold" Margin="0,10,0,5"/>
                        <mah:NumericUpDown Value="{Binding SelectedCustomer.LoyaltyPoints}"
                                          Margin="0,5"
                                          mah:TextBoxHelper.Watermark="Loyalty Points"
                                          Style="{StaticResource {x:Type mah:NumericUpDown}}"
                                          Minimum="0"/>

                        <mah:NumericUpDown Value="{Binding SelectedCustomer.CreditLimit}"
                                          Margin="0,5"
                                          mah:TextBoxHelper.Watermark="Credit Limit"
                                          Style="{StaticResource {x:Type mah:NumericUpDown}}"
                                          StringFormat="C"
                                          Minimum="0"/>

                        <!-- Notifications -->
                        <TextBlock Text="Notifications" Style="{StaticResource MahApps.Styles.TextBlock}" FontWeight="Bold" Margin="0,10,0,5"/>
                        <mah:ToggleSwitch Header="Rate Change Notifications"
                                         IsOn="{Binding SelectedCustomer.IsActive}"
                                         OnContent="Enabled"
                                         OffContent="Disabled"
                                         Margin="0,10"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                  Margin="0,20,0,0"
                                  HorizontalAlignment="Right">
                            <Button Content="Clear"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource MahApps.Styles.Button}"
                                    Command="{Binding ClearCommand}"/>
                            
                            <Button Content="Save"
                                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                    Command="{Binding AddOrUpdateCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </mah:MetroContentControl>
        </mah:MetroHeader>

        <!-- Customer List -->
        <mah:MetroHeader Grid.Column="1"
                        Margin="20,0,0,0"
                        Header="Customer List">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox Margin="0,0,0,10"
                         mah:TextBoxHelper.Watermark="Search customers..."
                         Style="{StaticResource MahApps.Styles.TextBox}"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Customers}"
                          SelectedItem="{Binding SelectedCustomer}"
                          AutoGenerateColumns="False"
                          Style="{StaticResource MahApps.Styles.DataGrid}"
                          GridLinesVisibility="Horizontal"
                          SelectionMode="Single"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" 
                                          Binding="{Binding CustomerName}"
                                          Width="*"/>
                        <DataGridTextColumn Header="Phone" 
                                          Binding="{Binding PhoneNumber}"
                                          Width="120"/>
                        <DataGridTextColumn Header="Email" 
                                          Binding="{Binding Email}"
                                          Width="150"/>
                        <DataGridTextColumn Header="City" 
                                          Binding="{Binding City}"
                                          Width="100"/>
                        <DataGridTextColumn Header="Type" 
                                          Binding="{Binding CustomerType}"
                                          Width="100"/>
                        <DataGridTextColumn Header="Credit Limit" 
                                          Binding="{Binding CreditLimit, StringFormat=C}"
                                          Width="100"/>
                        <DataGridTextColumn Header="Loyalty Points" 
                                          Binding="{Binding LoyaltyPoints}"
                                          Width="100"/>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                Width="32"
                                                Height="32"
                                                Margin="0,0,5,0"
                                                ToolTip="Edit"
                                                Command="{Binding DataContext.EditCommand, 
                                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <iconPacks:PackIconMaterial Kind="Pencil" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                Width="32"
                                                Height="32"
                                                ToolTip="Delete"
                                                Command="{Binding DataContext.DeleteCommand, 
                                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <iconPacks:PackIconMaterial Kind="Delete" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </mah:MetroHeader>
    </Grid>
</UserControl>
