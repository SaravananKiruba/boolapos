<UserControl x:Class="Page_Navigation_App.View.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Enhanced Product Entry Form with elegant visual design -->
        <Border Background="#FFFFFF"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                        ShadowDepth="2"
                        Opacity="0.25"/>
            </Border.Effect>
            <mah:MetroHeader Header="Product Details"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#2D3748"
                    Margin="8">
                <mah:MetroContentControl>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="650" Padding="0,0,5,0">
                        <StackPanel Margin="15,10">
                            <!-- Basic Information with visual grouping -->
                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="18,15"
                                    Margin="0,0,0,18">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Basic Information" 
                                              Style="{StaticResource MahApps.Styles.TextBlock}" 
                                              FontWeight="Bold"
                                              Foreground="#2D3748"
                                              Margin="0,0,0,12"
                                              FontSize="14"/>
                                        <Rectangle Height="2" Fill="#E2E8F0" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                                    </Grid>
                                    
                                    <TextBox Text="{Binding SelectedProduct.ProductName, UpdateSourceTrigger=PropertyChanged}"
                                           Margin="0,10,0,6"
                                           mah:TextBoxHelper.Watermark="Product Name"
                                           mah:TextBoxHelper.UseFloatingWatermark="True"
                                           mah:ControlsHelper.CornerRadius="6"
                                           FontSize="13"
                                           Height="38"
                                           Style="{StaticResource MahApps.Styles.TextBox}"/>
                                    
                                    <TextBox Text="{Binding SelectedProduct.Description, UpdateSourceTrigger=PropertyChanged}"
                                           Margin="0,6,0,0"
                                           mah:TextBoxHelper.Watermark="Description"
                                           mah:TextBoxHelper.UseFloatingWatermark="True"
                                           mah:ControlsHelper.CornerRadius="6"
                                           TextWrapping="Wrap"
                                           AcceptsReturn="True"
                                           Height="70"
                                           FontSize="13"
                                           Style="{StaticResource MahApps.Styles.TextBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Metal Type and Purity with visual grouping -->
                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="18,15"
                                    Margin="0,0,0,18">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Metal Information" 
                                              Style="{StaticResource MahApps.Styles.TextBlock}" 
                                              FontWeight="Bold"
                                              Foreground="#2D3748"
                                              Margin="0,0,0,12"
                                              FontSize="14"/>
                                        <Rectangle Height="2" Fill="#E2E8F0" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                                    </Grid>
                                    
                                    <!-- Metal Type and Purity side by side -->
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Metal Type with Label -->
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Metal Type" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <ComboBox ItemsSource="{Binding MetalTypes}"
                                                    SelectedItem="{Binding SelectedProduct.MetalType, UpdateSourceTrigger=PropertyChanged}"
                                                    mah:ControlsHelper.CornerRadius="6"
                                                    Height="38"
                                                    FontSize="13"
                                                    Style="{StaticResource MahApps.Styles.ComboBox}"/>
                                        </StackPanel>
                                        
                                        <!-- Purity with Label -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Purity" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <ComboBox ItemsSource="{Binding Purities}"
                                                    SelectedItem="{Binding SelectedProduct.Purity, UpdateSourceTrigger=PropertyChanged}"
                                                    mah:ControlsHelper.CornerRadius="6"
                                                    Height="38"
                                                    FontSize="13"
                                                    Style="{StaticResource MahApps.Styles.ComboBox}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>                            <!-- Weights and Prices with enhanced visual grouping -->
                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="18,15"
                                    Margin="0,0,0,18">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Weights and Prices (INR)" 
                                              Style="{StaticResource MahApps.Styles.TextBlock}" 
                                              FontWeight="Bold"
                                              Foreground="#2D3748"
                                              Margin="0,0,0,12"
                                              FontSize="14"/>
                                        <Rectangle Height="2" Fill="#E2E8F0" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                                    </Grid>
                                    
                                    <!-- Weights with elegant spacing -->
                                    <Grid Margin="0,10,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Gross Weight with Label -->
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Gross Weight (g)" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding SelectedProduct.GrossWeight, StringFormat=N3, UpdateSourceTrigger=PropertyChanged}"
                                                   mah:ControlsHelper.CornerRadius="6"
                                                   Height="38"
                                                   FontSize="13"
                                                   Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                        
                                        <!-- Net Weight with Label -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Net Weight (g)" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding SelectedProduct.NetWeight, StringFormat=N3, UpdateSourceTrigger=PropertyChanged}"
                                                   TextChanged="PriceAffecting_TextChanged"
                                                   mah:ControlsHelper.CornerRadius="6"
                                                   Height="38"
                                                   FontSize="13"
                                                   Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Making Charges and Stone Value with elegant spacing -->
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                          <!-- Making Charges with Label -->
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Making Charges (?)" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding SelectedProduct.MakingCharges, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                                   TextChanged="PriceAffecting_TextChanged"
                                                   mah:ControlsHelper.CornerRadius="6"
                                                   Height="38"
                                                   FontSize="13"
                                                   Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                        
                                        <!-- Stone Value with Label -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Stone Value (?)" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding SelectedProduct.StoneValue, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                                   mah:ControlsHelper.CornerRadius="6"
                                                   Height="38"
                                                   FontSize="13"
                                                   Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                    </Grid>                                    <!-- Wastage with elegant spacing -->
                                    <StackPanel Margin="0,6,0,16">
                                        <TextBlock Text="Wastage (%)" 
                                                FontSize="12" 
                                                FontWeight="Medium"
                                                Foreground="#4A5568"
                                                Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding SelectedProduct.WastagePercentage, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                               TextChanged="PriceAffecting_TextChanged"
                                               mah:ControlsHelper.CornerRadius="6"
                                               Height="38"
                                               FontSize="13"
                                               Style="{StaticResource MahApps.Styles.TextBox}"/>
                                    </StackPanel>
                                      <!-- Product Price with enhanced visibility -->
                                    <Border Background="#bbd3e8" 
                                           BorderBrush="#BEE3F8" 
                                           BorderThickness="1" 
                                           CornerRadius="8" 
                                           Padding="15,15,15,15" 
                                           Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Product Price (?)" 
                                                    FontSize="14" 
                                                    FontWeight="Bold"
                                                    Foreground="#2C5282"
                                                    Margin="0,0,0,8"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" 
                                                       Text="{Binding SelectedProduct.ProductPrice, StringFormat='₹ {0:N2}', UpdateSourceTrigger=PropertyChanged}"
                                                       IsReadOnly="True"
                                                       Background="White"
                                                       Foreground="#2C5282"
                                                       FontWeight="SemiBold"
                                                       mah:ControlsHelper.CornerRadius="6"
                                                       Height="42"
                                                       FontSize="16"
                                                       Style="{StaticResource MahApps.Styles.TextBox}"/>
                                                <Button Grid.Column="1"
                                                      Content="Recalculate"
                                                      Command="{Binding RecalculatePriceCommand}"
                                                      mah:ControlsHelper.CornerRadius="6"
                                                      Height="42"
                                                      FontSize="12"
                                                      Margin="8,0,0,0"
                                                      Style="{StaticResource MahApps.Styles.Button.Accent}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                      <!-- Divider for tax section -->
                                    <Rectangle Height="1" Fill="#E2E8F0" Margin="0,5,0,10"/>
                                    
                                    <!-- HUID Field -->
                                    <StackPanel Margin="0,5,0,10">
                                        <TextBlock Text="HUID Number" 
                                                FontSize="12" 
                                                FontWeight="Medium"
                                                Foreground="#4A5568"
                                                Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding SelectedProduct.HUID, UpdateSourceTrigger=PropertyChanged}"
                                               mah:ControlsHelper.CornerRadius="6"
                                               mah:TextBoxHelper.Watermark="HUID"
                                               Height="38"
                                               FontSize="13"
                                               Style="{StaticResource MahApps.Styles.TextBox}"/>
                                    </StackPanel>                                    <!-- Remove Base Price section -->
                                </StackPanel>
                            </Border>                            <!-- Product Details with enhanced visual grouping -->
                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="18,15"
                                    Margin="0,0,0,18">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Product Details" 
                                                Style="{StaticResource MahApps.Styles.TextBlock}" 
                                                FontWeight="Bold"
                                                Foreground="#2D3748"
                                                Margin="0,0,0,12"
                                                FontSize="14"/>
                                        <Rectangle Height="2" Fill="#E2E8F0" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                                    </Grid>
                                    
                                    <!-- Supplier with elegant styling -->
                                    <TextBlock Text="Supplier" 
                                            FontSize="12" 
                                            FontWeight="Medium"
                                            Foreground="#4A5568"
                                            Margin="0,10,0,4"/>
                                    <ComboBox ItemsSource="{Binding Suppliers}"
                                            SelectedValue="{Binding SelectedProduct.SupplierID}"
                                            SelectedValuePath="SupplierID"
                                            DisplayMemberPath="SupplierName"
                                            mah:TextBoxHelper.Watermark="Select Supplier"
                                            mah:ControlsHelper.CornerRadius="6"
                                            Height="38"
                                            FontSize="13"
                                            Style="{StaticResource MahApps.Styles.ComboBox}"
                                            Margin="0,0,0,10"/>
                                    
                                    <!-- Collection and Design side by side -->
                                    <Grid Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Collection -->
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Collection" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding SelectedProduct.Collection, UpdateSourceTrigger=PropertyChanged}"
                                                   mah:TextBoxHelper.Watermark="Collection Name"
                                                   mah:TextBoxHelper.UseFloatingWatermark="True"
                                                   mah:ControlsHelper.CornerRadius="6"
                                                   Height="38"
                                                   FontSize="13"
                                                   Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                        
                                        <!-- Design -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Design" 
                                                    FontSize="12" 
                                                    FontWeight="Medium"
                                                    Foreground="#4A5568"
                                                    Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding SelectedProduct.Design, UpdateSourceTrigger=PropertyChanged}"
                                                   mah:TextBoxHelper.Watermark="Design Pattern"
                                                   mah:TextBoxHelper.UseFloatingWatermark="True"
                                                   mah:ControlsHelper.CornerRadius="6"
                                                   Height="38"
                                                   FontSize="13"
                                                   Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>                            <!-- Initial Stock Section -->
                            <Border Background="#F9F9F9"
                                    CornerRadius="10"
                                    Padding="18,15"
                                    Margin="0,0,0,18">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Initial Stock" 
                                              Style="{StaticResource MahApps.Styles.TextBlock}" 
                                              FontWeight="Bold"
                                              Foreground="#2D3748"
                                              Margin="0,0,0,12"
                                              FontSize="14"/>
                                        <Rectangle Height="2" Fill="#E2E8F0" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                                    </Grid>
                                    
                                    <!-- Initial Stock Quantity and Location side by side -->
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Initial Stock Quantity with Label -->
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Initial Quantity" 
                                                     FontSize="12" 
                                                     FontWeight="Medium"
                                                     Foreground="#4A5568"
                                                     Margin="0,0,0,4"/>
                                            <mah:NumericUpDown Value="{Binding InitialStockQuantity}"
                                                           StringFormat="N3"
                                                           Minimum="0"
                                                           Maximum="9999.999"
                                                           Interval="1"
                                                           mah:ControlsHelper.CornerRadius="6"
                                                           Height="38"
                                                           FontSize="13"
                                                           Style="{StaticResource {x:Type mah:NumericUpDown}}"/>
                                        </StackPanel>
                                        
                                        <!-- Location with Label -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Stock Location" 
                                                     FontSize="12" 
                                                     FontWeight="Medium"
                                                     Foreground="#4A5568"
                                                     Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding StockLocation, UpdateSourceTrigger=PropertyChanged}"
                                                  mah:TextBoxHelper.Watermark="Location (e.g. Main)"
                                                  mah:ControlsHelper.CornerRadius="6"
                                                  Height="38"
                                                  FontSize="13"
                                                  Style="{StaticResource MahApps.Styles.TextBox}"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <TextBlock Text="Enter quantity to create initial stock when saving new product" 
                                             Foreground="#718096"
                                             FontSize="11"
                                             FontStyle="Italic"
                                             Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons with enhanced styling -->
                            <StackPanel Orientation="Horizontal" 
                                      Margin="0,25,0,0"
                                      HorizontalAlignment="Right">
                                <Button Content="Clear"
                                      Margin="0,0,15,0"
                                      Style="{StaticResource MahApps.Styles.Button}"
                                      mah:ControlsHelper.CornerRadius="8"
                                      Height="45"
                                      Width="120"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Command="{Binding ClearCommand}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="8"
                                                ShadowDepth="2"
                                                Opacity="0.3"/>
                                    </Button.Effect>
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="Eraser" 
                                                                        Width="16" 
                                                                        Height="16"
                                                                        VerticalAlignment="Center"
                                                                        Margin="0,0,8,0"/>
                                                <TextBlock Text="Clear" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                                
                                <Button Content="Save"
                                      Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                      mah:ControlsHelper.CornerRadius="8"
                                      Height="45"
                                      Width="120"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Command="{Binding AddOrUpdateCommand}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="8"
                                                ShadowDepth="2"
                                                Opacity="0.3"/>
                                    </Button.Effect>
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="ContentSave" 
                                                                        Width="16" 
                                                                        Height="16"
                                                                        VerticalAlignment="Center"
                                                                        Margin="0,0,8,0"/>
                                                <TextBlock Text="Save" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </mah:MetroContentControl>
            </mah:MetroHeader>
        </Border>        <!-- Enhanced Product List -->
        <Border Grid.Column="1"
                Background="#FFFFFF"
                CornerRadius="12"
                Margin="20,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                        ShadowDepth="2"
                        Opacity="0.25"/>
            </Border.Effect>
            <mah:MetroHeader Margin="8"
                    Header="Product List"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#2D3748">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Enhanced Search Box with icon -->
                    <Grid Margin="0,5,0,15">
                        <TextBox mah:TextBoxHelper.Watermark="Search products..."
                               Style="{StaticResource MahApps.Styles.TextBox}"
                               mah:TextBoxHelper.UseFloatingWatermark="True"
                               mah:ControlsHelper.CornerRadius="25"
                               Padding="40,8,15,8"
                               FontSize="14"
                               Height="45"
                               Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                            <TextBox.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.1"/>
                            </TextBox.Effect>
                        </TextBox>
                        <iconPacks:PackIconMaterial Kind="Magnify"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="15,0,0,0"
                                                 VerticalAlignment="Center"
                                                 Foreground="#777777"/>
                    </Grid>                    <!-- Premium Elegant DataGrid -->
                    <DataGrid Grid.Row="1"
                            ItemsSource="{Binding Products}"
                            SelectedItem="{Binding SelectedProduct}"
                            AutoGenerateColumns="False"
                            Style="{StaticResource MahApps.Styles.DataGrid}"
                            GridLinesVisibility="Horizontal"
                            SelectionMode="Single"
                            IsReadOnly="True"
                            AlternatingRowBackground="#F8FAFC"
                            RowHeight="50"
                            BorderThickness="0"
                            FontSize="13"
                            HeadersVisibility="Column"
                            HorizontalGridLinesBrush="#EDF2F7"
                            VerticalGridLinesBrush="Transparent">
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                           Color="#bbd3e8"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                           Color="#bbd3e8"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                           Color="#0462c2"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                           Color="#0462c2"/>
                        </DataGrid.Resources>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#334155"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="Padding" Value="10,0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource MahApps.Styles.DataGridCell}">
                                <Setter Property="Padding" Value="10,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                            <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    Background="{TemplateBinding Background}" 
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>                            <DataGridTextColumn Header="Name" 
                                              Binding="{Binding ProductName}"
                                              Width="*"/>
                            <DataGridTextColumn Header="Metal" 
                                              Binding="{Binding MetalType}"
                                              Width="80"/>
                            <DataGridTextColumn Header="Purity" 
                                              Binding="{Binding Purity}"
                                              Width="70"/>
                            <DataGridTextColumn Header="Gross (g)" 
                                              Binding="{Binding GrossWeight, StringFormat=N3}"
                                              Width="80"/>
                            <DataGridTextColumn Header="Net (g)" 
                                              Binding="{Binding NetWeight, StringFormat=N3}"
                                              Width="80"/>
                            <DataGridTextColumn Header="Stock" 
                                              Binding="{Binding StockItems.Count, StringFormat=N0}"
                                              Width="60"/><DataGridTextColumn Header="Price" 
                                              Binding="{Binding ProductPrice, StringFormat=₹ {0:N2}}"
                                              Width="100"/><DataGridTextColumn Header="Collection" 
                                              Binding="{Binding Collection}"
                                              Width="120"/>                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                  Width="36"
                                                  Height="36"
                                                  Margin="0,0,8,0"
                                                  ToolTip="Edit Product"
                                                  Background="#bbd3e8"
                                                  BorderBrush="#3182CE"
                                                  Command="{Binding DataContext.EditCommand, 
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  CommandParameter="{Binding}">
                                                <Button.Effect>
                                                    <DropShadowEffect BlurRadius="5"
                                                            ShadowDepth="1"
                                                            Opacity="0.2"/>
                                                </Button.Effect>
                                                <iconPacks:PackIconMaterial Kind="Pencil" 
                                                                         Width="16" 
                                                                         Height="16"
                                                                         Foreground="#3182CE"/>
                                            </Button>
                                            <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                  Width="36"
                                                  Height="36"
                                                  ToolTip="Delete Product"
                                                  Background="#FFF5F5"
                                                  BorderBrush="#E53E3E"
                                                  Command="{Binding DataContext.DeleteCommand, 
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  CommandParameter="{Binding}">
                                                <Button.Effect>
                                                    <DropShadowEffect BlurRadius="5"
                                                            ShadowDepth="1"
                                                            Opacity="0.2"/>
                                                </Button.Effect>
                                                <iconPacks:PackIconMaterial Kind="Delete" 
                                                                         Width="16" 
                                                                         Height="16"
                                                                         Foreground="#E53E3E"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
