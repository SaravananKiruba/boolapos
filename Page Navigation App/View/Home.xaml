<UserControl x:Class="Page_Navigation_App.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <UserControl.Resources>
        <ControlTemplate x:Key="ValidationErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder"/>
                <TextBlock FontSize="11" Foreground="#E53E3E" Margin="5,2,0,0" Text="{Binding [0].ErrorContent}"/>
            </StackPanel>
        </ControlTemplate>
        
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Direction="315" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DashboardIconStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="DashboardButtonStyle" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="mah:ControlsHelper.CornerRadius" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CounterTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Date Range -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                Margin="20,20,20,0" 
                CornerRadius="15" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Dashboard Overview" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentDate, StringFormat='{}{0:dddd, MMMM d, yyyy}'}" 
                               FontSize="16" 
                               Opacity="0.7"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <mah:DateTimePicker Width="150"
                                      SelectedDateTime="{Binding StartDate}"
                                      Culture="en-US"
                                      Style="{StaticResource {x:Type mah:DateTimePicker}}"
                                      mah:ControlsHelper.CornerRadius="8"/>
                    <TextBlock Text="to" Margin="10,0" VerticalAlignment="Center"/>
                    <mah:DateTimePicker Width="150"
                                      SelectedDateTime="{Binding EndDate}"
                                      Culture="en-US"
                                      Style="{StaticResource {x:Type mah:DateTimePicker}}"
                                      mah:ControlsHelper.CornerRadius="8"/>
                    <Button Margin="10,0,0,0"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                            Command="{Binding RefreshCommand}"
                            mah:ControlsHelper.CornerRadius="8">
                        <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dashboard Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Main Dashboard Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Customers Card -->
                <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" 
                        Margin="0,0,10,0" Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon and Title -->
                        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                            <Ellipse Style="{StaticResource DashboardIconStyle}" Fill="#4A89DC">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="315" 
                                                      Opacity="0.2" Color="#4A89DC"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <iconPacks:PackIconMaterial Kind="AccountGroup" Width="40" Height="40" 
                                                       Foreground="White" Margin="0,-60,0,0" 
                                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Content -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20">
                            <TextBlock Text="{Binding TotalCustomers}" 
                                     Style="{StaticResource CounterTextStyle}"
                                     Foreground="#4A89DC"/>
                            <TextBlock Text="Total Customers" 
                                     Style="{StaticResource LabelTextStyle}"
                                     Foreground="White"/>
                        </StackPanel>
                        
                        <!-- Button -->
                        <Button Grid.Row="2" 
                                Content="View Customer List" 
                                Style="{StaticResource DashboardButtonStyle}"
                                Command="{Binding ViewCustomersCommand}"
                                Background="#4A89DC"/>
                    </Grid>
                </Border>
                
                <!-- Orders Card -->
                <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}" 
                        Margin="10,0,0,0" Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon and Title -->
                        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                            <Ellipse Style="{StaticResource DashboardIconStyle}" Fill="#3BAFDA">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="315" 
                                                      Opacity="0.2" Color="#3BAFDA"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <iconPacks:PackIconMaterial Kind="CartOutline" Width="40" Height="40" 
                                                      Foreground="White" Margin="0,-60,0,0" 
                                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Content -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20">
                            <TextBlock Text="{Binding TotalOrders}" 
                                     Style="{StaticResource CounterTextStyle}"
                                     Foreground="#3BAFDA"/>
                            <TextBlock Text="Total Orders" 
                                     Style="{StaticResource LabelTextStyle}"
                                     Foreground="White"/>
                            <TextBlock Text="{Binding TotalRevenue, StringFormat={}₹{0:N2}}" 
                                     FontSize="20" FontWeight="Medium" HorizontalAlignment="Center" 
                                     Margin="0,10,0,0" Foreground="White"/>
                        </StackPanel>
                        
                        <!-- Button -->
                        <Button Grid.Row="2" 
                                Content="View Orders List" 
                                Style="{StaticResource DashboardButtonStyle}"
                                Command="{Binding ViewOrdersCommand}"
                                Background="#3BAFDA"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Bottom Summary Section -->
            <Border Grid.Row="1" Style="{StaticResource DashboardCardStyle}" 
                    Margin="0,20,0,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="Quick Summary" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="White"/>
                    <TextBlock Text="{Binding SummaryText}" TextWrapping="Wrap" LineHeight="24">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Opacity" Value="0.8"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
