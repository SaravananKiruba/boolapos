<UserControl x:Class="Page_Navigation_App.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622">

    <Grid Margin="15" Background="#212529">
        <!-- Main Border for Dashboard -->
        <Border CornerRadius="20" BorderBrush="#6C757D" BorderThickness="2" Padding="20" Background="#343A40">
            <StackPanel>
                <TextBlock Text="Stock Inventory Dashboard" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#F8F9FA"/>

                <!-- Date Range Filter (Global) -->
                <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Date Range:" Foreground="#F8F9FA" VerticalAlignment="Center" Margin="5"/>
                    <DatePicker Name="StartDatePicker" Width="150" Background="#495057" Foreground="#F8F9FA" BorderBrush="#6C757D" Margin="5"/>
                    <TextBlock Text=" to " Foreground="#F8F9FA" VerticalAlignment="Center" Margin="5,0"/>
                    <DatePicker Name="EndDatePicker" Width="150" Background="#495057" Foreground="#F8F9FA" BorderBrush="#6C757D" Margin="5"/>
                </StackPanel>

                <!-- Dashboard Stats Grid -->
                <UniformGrid Columns="2" Rows="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" >

                    <!-- Customer Count Section -->
                    <Border CornerRadius="10" BorderBrush="#6C757D" BorderThickness="1" Background="#495057" Margin="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Customer Count" FontSize="18" FontWeight="Bold" Foreground="#F8F9FA" HorizontalAlignment="Center"/>
                            <TextBlock Name="CustomerCountText" Text="0" FontSize="28" FontWeight="Bold" Foreground="#198754" HorizontalAlignment="Center" Margin="5"/>
                            <Button Content="View Per Product" Background="#198754" Foreground="#F8F9FA" BorderBrush="#157347" Margin="5"/>
                        </StackPanel>
                    </Border>

                    <!-- Product Count (In/Out) Section -->
                    <Border CornerRadius="10" BorderBrush="#6C757D" BorderThickness="1" Background="#495057" Margin="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Product Count (In/Out)" FontSize="18" FontWeight="Bold" Foreground="#F8F9FA" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="In: " Foreground="#0DCAF0" FontWeight="Bold"/>
                                <TextBlock Name="ProductInCountText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#0DCAF0" Margin="5,0"/>
                                <TextBlock Text="Out: " Foreground="#DC3545" FontWeight="Bold" Margin="15,0,0,0"/>
                                <TextBlock Name="ProductOutCountText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#DC3545" Margin="5,0"/>
                            </StackPanel>
                            <Button Content="View Per Product" Background="#0DCAF0" Foreground="#212529" BorderBrush="#0AA2C0" Margin="5"/>
                        </StackPanel>
                    </Border>

                    <!-- Sales / Order Count Section -->
                    <Border CornerRadius="10" BorderBrush="#6C757D" BorderThickness="1" Background="#495057" Margin="10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Sales / Order Count" FontSize="18" FontWeight="Bold" Foreground="#F8F9FA" HorizontalAlignment="Center"/>
                            <TextBlock Name="SalesOrderCountText" Text="0" FontSize="28" FontWeight="Bold" Foreground="#FFC107" HorizontalAlignment="Center" Margin="5"/>
                            <Button Content="View Per Product and Customer" Background="#FFC107" Foreground="#212529" BorderBrush="#E0A800" Margin="5"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
