<UserControl x:Class="Page_Navigation_App.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Date Range Filter -->
        <mah:MetroHeader Header="Date Range"
                        Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="From:" 
                         Margin="0,0,10,0" 
                         VerticalAlignment="Center"/>
                <mah:DateTimePicker Grid.Column="1"
                                   SelectedDateTime="{Binding StartDate}"
                                   Culture="en-US"
                                   Style="{StaticResource {x:Type mah:DateTimePicker}}"
                                   mah:ControlsHelper.CornerRadius="4"/>
                
                <TextBlock Grid.Column="2" 
                         Text="To:" 
                         Margin="20,0,10,0" 
                         VerticalAlignment="Center"/>
                <mah:DateTimePicker Grid.Column="3"
                                   SelectedDateTime="{Binding EndDate}"
                                   Culture="en-US"
                                   Style="{StaticResource {x:Type mah:DateTimePicker}}"
                                   mah:ControlsHelper.CornerRadius="4"/>

                <Button Grid.Column="4"
                        Margin="20,0,0,0"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        Command="{Binding RefreshCommand}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Refresh" 
                                                   Margin="0,0,5,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>
        </mah:MetroHeader>

        <!-- Dashboard Stats -->
        <ScrollViewer Grid.Row="1" 
                    VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <!-- Customers Stats -->
                <mah:MetroHeader Margin="0,0,20,20" Width="350">
                    <mah:Tile Width="350"
                             Height="180"
                             Background="{StaticResource SurfaceBrush}"
                             mah:ControlsHelper.CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="AccountGroup"
                                                         Width="24"
                                                         Height="24"
                                                         Foreground="{StaticResource PrimaryBrush}"/>
                                <TextBlock Text="Customers"
                                         Margin="10,0,0,0"
                                         FontSize="18"
                                         FontWeight="Medium"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1"
                                     Text="{Binding TotalCustomers}"
                                     FontSize="48"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource PrimaryBrush}"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>

                            <Button Grid.Row="2"
                                    Style="{StaticResource MahApps.Styles.Button.Flat}"
                                    HorizontalAlignment="Right"
                                    Command="{Binding ViewCustomersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="View Details"/>
                                    <iconPacks:PackIconMaterial Kind="ChevronRight"
                                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </mah:Tile>
                </mah:MetroHeader>

                <!-- Products Stats -->
                <mah:MetroHeader Margin="0,0,20,20" Width="350">
                    <mah:Tile Width="350"
                             Height="180"
                             Background="{StaticResource SurfaceBrush}"
                             mah:ControlsHelper.CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Package"
                                                         Width="24"
                                                         Height="24"
                                                         Foreground="#0DCAF0"/>
                                <TextBlock Text="Product Movement"
                                         Margin="10,0,0,0"
                                         FontSize="18"
                                         FontWeight="Medium"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                      Orientation="Horizontal"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="IN"
                                             FontSize="16"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ProductInCount}"
                                             FontSize="32"
                                             FontWeight="Bold"
                                             Foreground="#0DCAF0"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="20,0,0,0">
                                    <TextBlock Text="OUT"
                                             FontSize="16"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ProductOutCount}"
                                             FontSize="32"
                                             FontWeight="Bold"
                                             Foreground="#DC3545"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Row="2"
                                    Style="{StaticResource MahApps.Styles.Button.Flat}"
                                    HorizontalAlignment="Right"
                                    Command="{Binding ViewProductsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="View Details"/>
                                    <iconPacks:PackIconMaterial Kind="ChevronRight"
                                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </mah:Tile>
                </mah:MetroHeader>

                <!-- Orders Stats -->
                <mah:MetroHeader Margin="0,0,20,20" Width="350">
                    <mah:Tile Width="350"
                             Height="180"
                             Background="{StaticResource SurfaceBrush}"
                             mah:ControlsHelper.CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="CartCheck"
                                                         Width="24"
                                                         Height="24"
                                                         Foreground="#FFC107"/>
                                <TextBlock Text="Total Orders"
                                         Margin="10,0,0,0"
                                         FontSize="18"
                                         FontWeight="Medium"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalOrders}"
                                         FontSize="48"
                                         FontWeight="Bold"
                                         Foreground="#FFC107"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalRevenue, StringFormat={}Total Revenue: {0:C}}"
                                         FontSize="16"
                                         Opacity="0.7"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Row="2"
                                    Style="{StaticResource MahApps.Styles.Button.Flat}"
                                    HorizontalAlignment="Right"
                                    Command="{Binding ViewOrdersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="View Details"/>
                                    <iconPacks:PackIconMaterial Kind="ChevronRight"
                                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </mah:Tile>
                </mah:MetroHeader>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
