<UserControl x:Class="Page_Navigation_App.View.Orders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="900">

    <Grid Margin="20">
        <TabControl Style="{StaticResource MahApps.Styles.TabControl}">
            <TabItem Header="Create Order">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Customer Selection Section -->
                    <Border Grid.Row="0" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,10,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Customer Details" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                        ItemsSource="{Binding Customers}"
                                        SelectedItem="{Binding SelectedCustomer}"
                                        DisplayMemberPath="CustomerName"
                                        Style="{StaticResource MahApps.Styles.ComboBox}"
                                        mah:TextBoxHelper.Watermark="Select Customer"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Margin="0,0,10,0"/>
                                
                                <Border Grid.Column="1" 
                                        Background="#F9F9F9"
                                        CornerRadius="5"
                                        Padding="10,5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Customer Type: " 
                                                VerticalAlignment="Center"
                                                Foreground="#2D3748"/>
                                        <TextBlock Text="{Binding SelectedCustomer.CustomerType}" 
                                                VerticalAlignment="Center" 
                                                FontWeight="Bold"
                                                Foreground="#2196F3"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Product Selection Section -->
                    <Border Grid.Row="1" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Add Products" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                        ItemsSource="{Binding Products}"
                                        SelectedItem="{Binding SelectedProduct}"
                                        DisplayMemberPath="ProductName"
                                        Style="{StaticResource MahApps.Styles.ComboBox}"
                                        mah:TextBoxHelper.Watermark="Select Product"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Margin="0,0,10,0"/>
                                
                                <Border Grid.Column="1" 
                                        Background="#F9F9F9"
                                        CornerRadius="5"
                                        Padding="10,5">
                                    <TextBlock Text="{Binding SelectedProduct.FinalPrice, StringFormat='Price: {0:C}'}" 
                                            VerticalAlignment="Center"
                                            Foreground="#2D3748"/>
                                </Border>
                                
                                <Button Grid.Column="2"
                                        Content="Add Item"
                                        Command="{Binding AddOrderItemCommand}"
                                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Padding="15,8"
                                        Margin="10,0,0,0">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                ShadowDepth="1"
                                                Opacity="0.3"/>
                                    </Button.Effect>
                                </Button>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Order Items Section -->
                    <Border Grid.Row="2" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Order Items" Margin="5">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <DataGrid Grid.Row="0"
                                        ItemsSource="{Binding OrderItems}"
                                        SelectedItem="{Binding SelectedOrderItem}"
                                        AutoGenerateColumns="False"
                                        Style="{StaticResource MahApps.Styles.DataGrid}"
                                        GridLinesVisibility="Horizontal"
                                        AlternatingRowBackground="#F9F9F9"
                                        RowHeight="45"
                                        BorderThickness="0"
                                        VerticalGridLinesBrush="Transparent">
                                    <DataGrid.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                                    Color="#E3F2FD"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                                    Color="#E3F2FD"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                                    Color="Black"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                                    Color="Black"/>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Product" 
                                                        Binding="{Binding Product.ProductName}"
                                                        Width="*"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Type" 
                                                        Binding="{Binding Product.MetalType}"
                                                        Width="80"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Weight (g)" 
                                                        Binding="{Binding NetWeight, StringFormat={}{0:F3}}"
                                                        Width="80"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Rate" 
                                                        Binding="{Binding MetalRate, StringFormat={}{0:C}}"
                                                        Width="100"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Making %" 
                                                        Binding="{Binding MakingCharges, StringFormat={}{0:F2}%}"
                                                        Width="80"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Quantity" 
                                                        Binding="{Binding Quantity}"
                                                        Width="80"/>
                                        <DataGridTextColumn Header="Price" 
                                                        Binding="{Binding TotalAmount, StringFormat={}{0:C}}"
                                                        Width="120"
                                                        IsReadOnly="True"/>
                                        <DataGridTemplateColumn Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                            Width="32"
                                                            Height="32"
                                                            ToolTip="Remove Item"
                                                            Background="#FFEBEE"
                                                            BorderBrush="#F44336"
                                                            Command="{Binding DataContext.RemoveOrderItemCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}">
                                                        <iconPacks:PackIconMaterial Kind="Delete" 
                                                                                Width="16" 
                                                                                Height="16"
                                                                                Foreground="#F44336"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Order Summary Section -->
                                <Grid Grid.Row="1" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0"
                                            Background="#F9F9F9"
                                            CornerRadius="8"
                                            Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Payment Options" 
                                                    Style="{StaticResource MahApps.Styles.TextBlock}" 
                                                    FontWeight="Bold"
                                                    Foreground="#2D3748"
                                                    Margin="0,0,0,10"/>
                                                
                                            <ComboBox ItemsSource="{Binding PaymentTypes}"
                                                    SelectedItem="{Binding SelectedOrder.PaymentType}"
                                                    Style="{StaticResource MahApps.Styles.ComboBox}"
                                                    mah:TextBoxHelper.Watermark="Payment Method"
                                                    mah:ControlsHelper.CornerRadius="5"
                                                    Width="200"
                                                    HorizontalAlignment="Left"
                                                    Margin="0,0,0,10"/>
                                        
                                            <StackPanel Orientation="Horizontal">
                                                <mah:NumericUpDown Value="{Binding SelectedOrder.DiscountPercentage}"
                                                                Minimum="0"
                                                                Maximum="100"
                                                                StringFormat="F2"
                                                                Width="150"
                                                                mah:TextBoxHelper.Watermark="Discount %"
                                                                mah:ControlsHelper.CornerRadius="5"
                                                                Margin="0,0,10,0"/>
                                                                
                                                <mah:NumericUpDown Value="{Binding SelectedOrder.DiscountAmount}"
                                                                Minimum="0"
                                                                StringFormat="C"
                                                                Width="150"
                                                                mah:TextBoxHelper.Watermark="Discount Amount"
                                                                mah:ControlsHelper.CornerRadius="5"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Column="1"
                                            Background="#F9F9F9"
                                            CornerRadius="8"
                                            Padding="15"
                                            Margin="15,0,0,0">
                                        <StackPanel HorizontalAlignment="Right">
                                            <TextBlock Text="Order Summary" 
                                                     Style="{StaticResource MahApps.Styles.TextBlock}" 
                                                     FontWeight="Bold"
                                                     Foreground="#2D3748"
                                                     Margin="0,0,0,10"
                                                     HorizontalAlignment="Center"/>
                                            
                                            <TextBlock Text="{Binding SelectedOrder.TotalAmount, StringFormat='Sub Total: {0:C}'}"
                                                    FontSize="14"
                                                    Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding SelectedOrder.CGST, StringFormat='CGST (1.5%): {0:C}'}"
                                                    FontSize="14"
                                                    Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding SelectedOrder.SGST, StringFormat='SGST (1.5%): {0:C}'}"
                                                    FontSize="14"
                                                    Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding SelectedOrder.DiscountAmount, StringFormat='Discount: -{0:C}'}"
                                                    FontSize="14"
                                                    Margin="0,0,0,5"/>
                                            <Border Background="#E3F2FD"
                                                    CornerRadius="5"
                                                    Padding="10,5"
                                                    Margin="0,5,0,0">
                                                <TextBlock Text="{Binding SelectedOrder.GrandTotal, StringFormat='Grand Total: {0:C}'}"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Foreground="#2196F3"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              Margin="0,10,0,0">
                        <Button Content="Clear"
                                Command="{Binding ClearCommand}"
                                Style="{StaticResource MahApps.Styles.Button}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="15,8"
                                Margin="0,0,10,0">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Save Order"
                                Command="{Binding AddOrUpdateCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="15,8">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Order List">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Section -->
                    <Border Grid.Row="0" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,10,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Search Orders" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                        Text="Date Range:" 
                                        VerticalAlignment="Center"
                                        Foreground="#2D3748"
                                        FontWeight="SemiBold"
                                        Margin="0,0,10,0"/>
                                          <mah:DateTimePicker Grid.Column="1"
                                                SelectedDateTime="{Binding StartDateUI}"
                                                mah:ControlsHelper.CornerRadius="5"
                                                Margin="0,0,10,0"/>
                                                
                                <TextBlock Grid.Column="2" 
                                        Text="to" 
                                        VerticalAlignment="Center"
                                        Foreground="#2D3748"
                                        FontWeight="SemiBold"
                                        Margin="0,0,10,0"/>
                                          <mah:DateTimePicker Grid.Column="3"
                                                SelectedDateTime="{Binding EndDateUI}"
                                                mah:ControlsHelper.CornerRadius="5"
                                                Margin="0,0,10,0"/>

                                <Button Grid.Column="4"
                                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Padding="15,8"
                                        Command="{Binding SearchByDateCommand}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                ShadowDepth="1"
                                                Opacity="0.3"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Magnify" 
                                                                Margin="0,0,5,0"/>
                                        <TextBlock Text="Search"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>

                    <!-- Orders List -->
                    <Border Grid.Row="1"
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Margin="5"
                                Header="Orders">
                            <DataGrid ItemsSource="{Binding Orders}"
                                    SelectedItem="{Binding SelectedOrder}"
                                    AutoGenerateColumns="False"
                                    Style="{StaticResource MahApps.Styles.DataGrid}"
                                    GridLinesVisibility="Horizontal"
                                    SelectionMode="Single"
                                    IsReadOnly="True"
                                    AlternatingRowBackground="#F9F9F9"
                                    RowHeight="45"
                                    BorderThickness="0"
                                    Margin="10"
                                    VerticalGridLinesBrush="Transparent">
                                <DataGrid.Resources>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                                Color="#E3F2FD"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                                Color="#E3F2FD"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                                Color="Black"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                                Color="Black"/>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Order ID" 
                                                    Binding="{Binding OrderID}"
                                                    Width="80"/>
                                    <DataGridTextColumn Header="Customer" 
                                                    Binding="{Binding Customer.CustomerName}"
                                                    Width="*"/>
                                    <DataGridTextColumn Header="Order Date" 
                                                    Binding="{Binding OrderDate, StringFormat=d}"
                                                    Width="100"/>
                                    <DataGridTextColumn Header="Items" 
                                                    Binding="{Binding TotalItems}"
                                                    Width="60"/>
                                    <DataGridTextColumn Header="Payment" 
                                                    Binding="{Binding PaymentType}"
                                                    Width="100"/>
                                    <DataGridTextColumn Header="Total" 
                                                    Binding="{Binding GrandTotal, StringFormat=₹ {0:N2}}"
                                                    Width="120"/>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                            Width="32"
                                                            Height="32"
                                                            Margin="0,0,5,0"
                                                            ToolTip="Create Finance Entry"
                                                            Background="#E3F2FD"
                                                            BorderBrush="#2196F3"
                                                            Command="{Binding DataContext.CreateFinanceEntryCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                        <iconPacks:PackIconMaterial Kind="CashRegister" 
                                                                                Width="16" 
                                                                                Height="16"
                                                                                Foreground="#2196F3"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                            Width="32"
                                                            Height="32"
                                                            ToolTip="Generate Invoice"
                                                            Background="#E8F5E9"
                                                            BorderBrush="#4CAF50"
                                                            Command="{Binding DataContext.GenerateInvoiceCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                        <iconPacks:PackIconMaterial Kind="FileDocument" 
                                                                                Width="16" 
                                                                                Height="16"
                                                                                Foreground="#4CAF50"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </mah:MetroHeader>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button Style="{StaticResource MahApps.Styles.Button.Square}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="15,8"
                                Command="{Binding ExportCommand}">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="FileExport" 
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
