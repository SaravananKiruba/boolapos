<UserControl x:Class="Page_Navigation_App.View.Orders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="900">

    <Grid Margin="20">
        <!-- Add Reload Button at the top right -->
        <Button x:Name="btnReloadData"                Content="Reload Data" 
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                Click="ReloadData_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,20,0"
                Panel.ZIndex="100"
                Width="100"
                Height="30"/>
                
        <TabControl Style="{StaticResource MahApps.Styles.TabControl}">
            <TabItem Header="Create Order">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Order Mode Selection -->
                        <RowDefinition Height="Auto"/> <!-- Customer Selection -->
                        <RowDefinition Height="Auto"/> <!-- Barcode/Manual Product Selection -->
                        <RowDefinition Height="*"/>    <!-- Order Items List -->
                        <RowDefinition Height="Auto"/> <!-- Order Actions -->
                    </Grid.RowDefinitions>
                    
                    <!-- Order Mode Selection -->
                    <Border Grid.Row="0" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,10,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Order Mode" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <RadioButton Grid.Column="0" 
                                           Content="Manual Entry Mode" 
                                           IsChecked="{Binding IsBarcodeMode, Converter={StaticResource InverseBooleanConverter}}"
                                           GroupName="OrderMode"
                                           Style="{StaticResource MahApps.Styles.RadioButton}"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="#2D3748"
                                           Margin="0,0,20,0"/>
                                
                                <RadioButton Grid.Column="1" 
                                           Content="Barcode Scanning Mode" 
                                           IsChecked="{Binding IsBarcodeMode}"
                                           GroupName="OrderMode"
                                           Style="{StaticResource MahApps.Styles.RadioButton}"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="#2D3748"/>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Customer Selection Section -->
                    <Border Grid.Row="1" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Customer Details" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                        ItemsSource="{Binding Customers}"
                                        SelectedItem="{Binding SelectedCustomer}"
                                        DisplayMemberPath="CustomerName"
                                        Style="{StaticResource MahApps.Styles.ComboBox}"
                                        mah:TextBoxHelper.Watermark="Select Customer"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Margin="0,0,10,0"/>
                                
                                <Border Grid.Column="1" 
                                        Background="#F9F9F9"
                                        CornerRadius="5"
                                        Padding="10,5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Customer Type: " 
                                                VerticalAlignment="Center"
                                                Foreground="#2D3748"/>
                                        <TextBlock Text="{Binding SelectedCustomer.CustomerType}" 
                                                VerticalAlignment="Center" 
                                                FontWeight="Bold"
                                                Foreground="#018da5"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Barcode Scanning Section (Visible when Barcode Mode is selected) -->
                    <Border Grid.Row="2" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,10"
                            Visibility="{Binding IsBarcodeMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Barcode Scanning" Margin="5">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Barcode Input -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0"
                                           Text="{Binding CurrentBarcode, UpdateSourceTrigger=PropertyChanged}"
                                           Style="{StaticResource MahApps.Styles.TextBox}"
                                           mah:TextBoxHelper.Watermark="Scan or Enter Barcode (ITM-XXXX-XXXXXXXX-XXXX)"
                                           mah:ControlsHelper.CornerRadius="5"
                                           FontSize="14"
                                           Padding="10,8"
                                           Margin="0,0,10,0">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding ScanBarcodeCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    
                                    <Button Grid.Column="1"
                                          Command="{Binding ScanBarcodeCommand}"
                                          Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                          mah:ControlsHelper.CornerRadius="5"
                                          Padding="15,8"
                                          Margin="0,0,10,0">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="Barcode" Margin="0,0,5,0"/>
                                                <TextBlock Text="Scan"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    
                                    <Button Grid.Column="2"
                                          Command="{Binding ClearCommand}"
                                          Style="{StaticResource MahApps.Styles.Button.Square}"
                                          mah:ControlsHelper.CornerRadius="5"
                                          Padding="15,8"
                                          Background="#FFE0E0"
                                          BorderBrush="#FF6B6B">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconMaterial Kind="DeleteSweep" Margin="0,0,5,0"/>
                                                <TextBlock Text="Clear"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                                
                                <!-- Scanned Items List -->
                                <Border Grid.Row="1" 
                                      Background="#F8F9FA"
                                      CornerRadius="5"
                                      BorderBrush="#E9ECEF"
                                      BorderThickness="1"
                                      MinHeight="150">
                                    <Grid>
                                        <ListBox ItemsSource="{Binding ScannedBarcodes}"
                                               Style="{StaticResource MahApps.Styles.ListBox}"
                                               BorderThickness="0"
                                               Background="Transparent"
                                               Margin="10">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White"
                                                          CornerRadius="5"
                                                          Padding="10"
                                                          Margin="0,2"
                                                          BorderBrush="#DEE2E6"
                                                          BorderThickness="1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <iconPacks:PackIconMaterial Grid.Column="0"
                                                                                      Kind="Barcode"
                                                                                      Foreground="#28A745"
                                                                                      VerticalAlignment="Center"
                                                                                      Margin="0,0,10,0"/>
                                                            
                                                            <TextBlock Grid.Column="1"
                                                                     Text="{Binding}"
                                                                     FontFamily="Courier New"
                                                                     FontSize="12"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="#2D3748"/>
                                                            
                                                            <TextBlock Grid.Column="2"
                                                                     Text="✓ Scanned"
                                                                     FontSize="10"
                                                                     Foreground="#28A745"
                                                                     FontWeight="Bold"
                                                                     VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        
                                        <!-- Empty State -->
                                        <StackPanel HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Visibility="{Binding ScannedBarcodes.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                            <iconPacks:PackIconMaterial Kind="BarcodeOff" 
                                                                      Width="48" 
                                                                      Height="48"
                                                                      Foreground="#CED4DA"
                                                                      HorizontalAlignment="Center"/>
                                            <TextBlock Text="No items scanned yet"
                                                     FontSize="14"
                                                     Foreground="#6C757D"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,10,0,0"/>
                                            <TextBlock Text="Scan barcodes to add items to the order"
                                                     FontSize="12"
                                                     Foreground="#ADB5BD"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Product Selection Section (Visible when Manual Mode is selected) -->
                    <Border Grid.Row="2" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,10"
                            Visibility="{Binding IsManualMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Add Products (Manual Entry)" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                        ItemsSource="{Binding Products}"
                                        SelectedItem="{Binding SelectedProduct}"
                                        DisplayMemberPath="ProductName"
                                        Style="{StaticResource MahApps.Styles.ComboBox}"
                                        mah:TextBoxHelper.Watermark="Select Product"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Margin="0,0,10,0"/>
                                
                                <Border Grid.Column="1" 
                                        Background="#F9F9F9"
                                        CornerRadius="5"
                                        Padding="10,5">                                    <TextBlock Text="{Binding SelectedProduct.FinalPrice, StringFormat='Price: ₹ {0:N2}'}" 
                                            VerticalAlignment="Center"
                                            Foreground="#2D3748"/>
                                </Border>
                                
                                <Button Grid.Column="2"
                                        Content="Add Item"
                                        Command="{Binding AddOrderItemCommand}"
                                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Padding="15,8"
                                        Margin="10,0,0,0">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                ShadowDepth="1"
                                                Opacity="0.3"/>
                                    </Button.Effect>
                                </Button>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Order Items Section -->
                    <Border Grid.Row="3" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Order Items" Margin="5">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <DataGrid Grid.Row="0"
                                        ItemsSource="{Binding OrderItems}"
                                        SelectedItem="{Binding SelectedOrderItem}"
                                        AutoGenerateColumns="False"
                                        Style="{StaticResource MahApps.Styles.DataGrid}"
                                        GridLinesVisibility="Horizontal"
                                        AlternatingRowBackground="#F9F9F9"
                                        RowHeight="45"
                                        BorderThickness="0"
                                        VerticalGridLinesBrush="Transparent">
                                    <DataGrid.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                                    Color="#bbd3e8"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                                    Color="#bbd3e8"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                                    Color="Black"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                                    Color="Black"/>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Product" 
                                                        Binding="{Binding Product.ProductName}"
                                                        Width="*"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Type" 
                                                        Binding="{Binding Product.MetalType}"
                                                        Width="70"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Purity" 
                                                        Binding="{Binding Product.Purity}"
                                                        Width="70"
                                                        IsReadOnly="True"/>                                        
                                        <DataGridTextColumn Header="Unit Price" 
                                                        Binding="{Binding UnitPrice, StringFormat='₹ {0:N2}'}"
                                                        Width="90"
                                                        IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Quantity" 
                                                        Binding="{Binding Quantity}"
                                                        Width="70"/>
                                        <DataGridTextColumn Header="Total" 
                                                        Binding="{Binding TotalAmount, StringFormat='₹ {0:N2}'}"
                                                        Width="120"
                                                        IsReadOnly="True"/>
                                        <DataGridTemplateColumn Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                            Width="32"
                                                            Height="32"
                                                            ToolTip="Remove Item"
                                                            Background="#FFEBEE"
                                                            BorderBrush="#F44336"
                                                            Command="{Binding DataContext.RemoveOrderItemCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}">
                                                        <iconPacks:PackIconMaterial Kind="Delete" 
                                                                                Width="16" 
                                                                                Height="16"
                                                                                Foreground="#F44336"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Order Summary Section -->
                                <Grid Grid.Row="1" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0"
                                            Background="#F9F9F9"
                                            CornerRadius="8"
                                            Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Payment Options" 
                                                    Style="{StaticResource MahApps.Styles.TextBlock}" 
                                                    FontWeight="Bold"
                                                    Foreground="#2D3748"
                                                    Margin="0,0,0,10"/>
                                                
                                            <ComboBox ItemsSource="{Binding PaymentTypes}"
                                                    SelectedItem="{Binding SelectedOrder.PaymentType}"
                                                    Style="{StaticResource MahApps.Styles.ComboBox}"
                                                    mah:TextBoxHelper.Watermark="Payment Method"
                                                    mah:ControlsHelper.CornerRadius="5"
                                                    Width="200"
                                                    HorizontalAlignment="Left"
                                                    Margin="0,0,0,10"/>                                            <StackPanel>
                                                <TextBlock Text="Discount Amount" 
                                                         FontSize="12" 
                                                         FontWeight="Medium"
                                                         Foreground="#4A5568"
                                                         Margin="0,0,0,5"/>                                                
                                                <mah:NumericUpDown Value="{Binding DiscountAmount, UpdateSourceTrigger=PropertyChanged}"
                                                                Minimum="0"
                                                                StringFormat="₹ {0:N2}"
                                                                Width="200"
                                                                Margin="0,0,0,10"
                                                                Padding="5"
                                                                HorizontalContentAlignment="Right"
                                                                mah:TextBoxHelper.Watermark="Enter Discount Amount"
                                                                mah:ControlsHelper.CornerRadius="5"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Column="1"
                                            Background="#F9F9F9"
                                            CornerRadius="8"
                                            Padding="15"
                                            Margin="15,0,0,0">                                        <StackPanel HorizontalAlignment="Right">
                                            <TextBlock Text="Order Summary" 
                                                     Style="{StaticResource MahApps.Styles.TextBlock}" 
                                                     FontWeight="Bold"
                                                     Foreground="#2D3748"
                                                     Margin="0,0,0,15"
                                                     HorizontalAlignment="Center"/>
                                                     
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="15"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Text="Subtotal:" 
                                                    FontSize="14"
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding SelectedOrder.TotalAmount, StringFormat='₹ {0:N2}'}"
                                                    FontSize="14"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"/>
                                                
                                                <TextBlock Text="Discount:" 
                                                    FontSize="14"
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding SelectedOrder.DiscountAmount, StringFormat='₹ {0:N2}'}"
                                                    FontSize="14"
                                                    Grid.Row="2"
                                                    Grid.Column="2"
                                                    Foreground="{Binding SelectedOrder.DiscountAmount, Converter={StaticResource NegativeToRedConverter}}"
                                                    HorizontalAlignment="Right"/>
                                                
                                                <TextBlock Text="Price Before Tax:" 
                                                    FontSize="14"
                                                    Grid.Row="4"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding SelectedOrder.PriceBeforeTax, StringFormat='₹ {0:N2}'}"
                                                    FontSize="14"
                                                    Grid.Row="4"
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"/>
                                                
                                                <TextBlock Text="Tax (3%):" 
                                                    FontSize="14"
                                                    Grid.Row="6"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding TaxValue, StringFormat='₹ {0:N2}'}"
                                                    FontSize="14"
                                                    Grid.Row="6"
                                                    Grid.Column="2" 
                                                    HorizontalAlignment="Right"/>
                                            </Grid>
                                            
                                            <Border Background="#bbd3e8"
                                                    CornerRadius="5"
                                                    Padding="15,10"
                                                    Width="220"
                                                    Margin="0,5,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="Grand Total:" 
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Foreground="#0462c2"
                                                        Grid.Column="0"/>
                                                    <TextBlock Text="{Binding SelectedOrder.GrandTotal, StringFormat='₹ {0:N2}'}"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Foreground="#0462c2"
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              Margin="0,10,0,0">
                        <Button Content="Clear"
                                Command="{Binding ClearCommand}"
                                Style="{StaticResource MahApps.Styles.Button}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="15,8"
                                Margin="0,0,10,0">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                        
                        <!-- Manual Mode Order Button -->
                        <Button Content="Save Order"
                                Command="{Binding AddOrUpdateCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="15,8"
                                Visibility="{Binding IsManualMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                        
                        <!-- Barcode Mode Order Button -->
                        <Button Command="{Binding ProcessBarcodeOrderCommand}"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                mah:ControlsHelper.CornerRadius="5"
                                Padding="15,8"
                                Visibility="{Binding IsBarcodeMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Barcode" Margin="0,0,5,0"/>
                                    <TextBlock Text="Process Barcode Order"/>
                                </StackPanel>
                            </Button.Content>
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5"
                                        ShadowDepth="1"
                                        Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Order List">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Section -->
                    <Border Grid.Row="0" 
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,10,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Header="Search Orders" Margin="5">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                        Text="Date Range:" 
                                        VerticalAlignment="Center"
                                        Foreground="#2D3748"
                                        FontWeight="SemiBold"
                                        Margin="0,0,10,0"/>
                                          <mah:DateTimePicker Grid.Column="1"
                                                SelectedDateTime="{Binding StartDateUI}"
                                                mah:ControlsHelper.CornerRadius="5"
                                                Margin="0,0,10,0"/>
                                                
                                <TextBlock Grid.Column="2" 
                                        Text="to" 
                                        VerticalAlignment="Center"
                                        Foreground="#2D3748"
                                        FontWeight="SemiBold"
                                        Margin="0,0,10,0"/>
                                          <mah:DateTimePicker Grid.Column="3"
                                                SelectedDateTime="{Binding EndDateUI}"
                                                mah:ControlsHelper.CornerRadius="5"
                                                Margin="0,0,10,0"/>

                                <Button Grid.Column="4"
                                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                        mah:ControlsHelper.CornerRadius="5"
                                        Padding="15,8"
                                        Command="{Binding SearchByDateCommand}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                ShadowDepth="1"
                                                Opacity="0.3"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Magnify" 
                                                                Margin="0,0,5,0"/>
                                        <TextBlock Text="Search"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </mah:MetroHeader>
                    </Border>

                    <!-- Orders List -->
                    <Border Grid.Row="1"
                            Background="#FFFFFF"
                            CornerRadius="10"
                            Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                    ShadowDepth="1"
                                    Opacity="0.2"/>
                        </Border.Effect>
                        <mah:MetroHeader Margin="5"
                                Header="Orders">
                            <DataGrid ItemsSource="{Binding Orders}"
                                    SelectedItem="{Binding SelectedOrder}"
                                    AutoGenerateColumns="False"
                                    Style="{StaticResource MahApps.Styles.DataGrid}"
                                    GridLinesVisibility="Horizontal"
                                    SelectionMode="Single"
                                    IsReadOnly="True"
                                    AlternatingRowBackground="#F9F9F9"
                                    RowHeight="45"
                                    BorderThickness="0"
                                    Margin="10"
                                    VerticalGridLinesBrush="Transparent">
                                <DataGrid.Resources>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                                Color="#bbd3e8"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                                Color="#bbd3e8"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                                Color="Black"/>
                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                                Color="Black"/>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Order ID" 
                                                    Binding="{Binding OrderID}"
                                                    Width="80"/>
                                    <DataGridTextColumn Header="Customer" 
                                                    Binding="{Binding Customer.CustomerName}"
                                                    Width="*"/>
                                    <DataGridTextColumn Header="Order Date" 
                                                    Binding="{Binding OrderDate, StringFormat=d}"
                                                    Width="100"/>
                                    <DataGridTextColumn Header="Items" 
                                                    Binding="{Binding TotalItems}"
                                                    Width="60"/>
                                    <DataGridTextColumn Header="Payment" 
                                                    Binding="{Binding PaymentType}"
                                                    Width="100"/>
                                    <DataGridTextColumn Header="Total" 
                                                    Binding="{Binding GrandTotal, StringFormat=₹ {0:N2}}"
                                                    Width="120"/>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                            Width="32"
                                                            Height="32"
                                                            Margin="0,0,5,0"
                                                            ToolTip="Create Income Entry"
                                                            Background="#bbd3e8"
                                                            BorderBrush="#0462c2"
                                                            Command="{Binding DataContext.CreateFinanceEntryCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                        <iconPacks:PackIconMaterial Kind="CashRegister" 
                                                                                Width="16" 
                                                                                Height="16"
                                                                                Foreground="#0462c2"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MahApps.Styles.Button.Circle}"
                                                            Width="32"
                                                            Height="32"
                                                            ToolTip="Generate Invoice PDF"
                                                            Background="#E8F5E9"
                                                            BorderBrush="#4CAF50"
                                                            Command="{Binding DataContext.GenerateInvoiceCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                        <iconPacks:PackIconMaterial Kind="FileDocument" 
                                                                                Width="16" 
                                                                                Height="16"
                                                                                Foreground="#4CAF50"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </mah:MetroHeader>
                    </Border>

                   
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
