<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Page_Navigation_App.View.Reports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Report Controls with enhanced styling -->
        <Border Grid.Row="0"
                Background="#FFFFFF"
                CornerRadius="10"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                        ShadowDepth="1"
                        Opacity="0.2"/>
            </Border.Effect>
            <mah:MetroHeader Header="Report Configuration" Margin="5">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox Grid.Column="0"
                            ItemsSource="{Binding ReportTypes}"
                            SelectedItem="{Binding SelectedReportType}"
                            Style="{StaticResource MahApps.Styles.ComboBox}"
                            Margin="0,0,10,0"
                            mah:TextBoxHelper.Watermark="Select Report Type"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:ControlsHelper.CornerRadius="5"/>
                    
                    <mah:DateTimePicker Grid.Column="1"
                                    SelectedDateTime="{Binding StartDate}"
                                    Style="{StaticResource {x:Type mah:DateTimePicker}}"
                                    Margin="0,0,10,0"
                                    mah:TextBoxHelper.Watermark="Start Date"
                                    mah:ControlsHelper.CornerRadius="5"/>
                    
                    <mah:DateTimePicker Grid.Column="2"
                                    SelectedDateTime="{Binding EndDate}"
                                    Style="{StaticResource {x:Type mah:DateTimePicker}}"
                                    Margin="0,0,10,0"
                                    mah:TextBoxHelper.Watermark="End Date"
                                    mah:ControlsHelper.CornerRadius="5"/>
                    
                    <Button Grid.Column="3"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                            Command="{Binding GenerateReportCommand}"
                            mah:ControlsHelper.CornerRadius="5"
                            Padding="15,8">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5"
                                    ShadowDepth="1"
                                    Opacity="0.3"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ChartLine" 
                                                    Margin="0,0,5,0"/>
                            <TextBlock Text="Generate Report"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </mah:MetroHeader>
        </Border>
        
        <!-- Report Display with enhanced styling -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsReportGenerated}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Report Title -->
            <Border Grid.Row="0" 
                    Background="#bbd3e8"
                    CornerRadius="8"
                    Padding="15,10"
                    Margin="0,0,0,20">
                <TextBlock Text="{Binding ReportTitle}"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#0462c2"/>
            </Border>
            
            <!-- Report Summary with enhanced styling -->
            <Border Grid.Row="1"
                    Background="#FFFFFF"
                    CornerRadius="10"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                            ShadowDepth="1"
                            Opacity="0.2"/>
                </Border.Effect>
                <mah:MetroHeader Header="Report Summary" Margin="5">
                    <ItemsControl ItemsSource="{Binding ReportSummary}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9F9F9"
                                        CornerRadius="5"
                                        Padding="15,10"
                                        Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                Text="{Binding Key}" 
                                                FontWeight="SemiBold"
                                                Foreground="#2D3748"
                                                Width="150"/>
                                        
                                        <ContentPresenter Grid.Column="1" Content="{Binding Value}">
                                            <ContentPresenter.Resources>
                                                <!-- Default template for simple values -->
                                                <DataTemplate DataType="{x:Type System:String}">
                                                    <TextBlock Text="{Binding}"/>
                                                </DataTemplate>
                                                <DataTemplate DataType="{x:Type System:Int32}">
                                                    <TextBlock Text="{Binding}"/>
                                                </DataTemplate>
                                                <DataTemplate DataType="{x:Type System:Decimal}">
                                                    <TextBlock Text="{Binding StringFormat='{}{0:C}'}" FontWeight="Bold"/>
                                                </DataTemplate>
                                                
                                                <!-- Template for collections -->
                                                <DataTemplate DataType="{x:Type collections:IEnumerable}">
                                                    <TextBlock Text="(See detailed report below)"
                                                            FontStyle="Italic"
                                                            Foreground="#777777"/>
                                                </DataTemplate>
                                            </ContentPresenter.Resources>
                                        </ContentPresenter>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </mah:MetroHeader>
            </Border>
            
            <!-- Report Data with enhanced styling -->
            <Border Grid.Row="2" 
                    Background="#FFFFFF"
                    CornerRadius="10"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                            ShadowDepth="1"
                            Opacity="0.2"/>
                </Border.Effect>
                <mah:MetroHeader Header="Detailed Report" Margin="5">
                    <DataGrid ItemsSource="{Binding ReportData}"
                            AutoGenerateColumns="True"
                            Style="{StaticResource MahApps.Styles.DataGrid}"
                            GridLinesVisibility="Horizontal"
                            IsReadOnly="True"
                            Margin="10"
                            AlternatingRowBackground="#F9F9F9"
                            RowHeight="45"
                            BorderThickness="0"
                            VerticalGridLinesBrush="Transparent">
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                        Color="#bbd3e8"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                        Color="#bbd3e8"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                        Color="Black"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                        Color="Black"/>
                        </DataGrid.Resources>
                    </DataGrid>
                </mah:MetroHeader>
            </Border>
            
            <!-- Export Button -->
            <Button Grid.Row="3"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0"
                    Style="{StaticResource MahApps.Styles.Button.Square}"
                    Command="{Binding ExportReportCommand}"
                    mah:ControlsHelper.CornerRadius="5"
                    Padding="15,8">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="5"
                            ShadowDepth="1"
                            Opacity="0.3"/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Export" 
                                            Margin="0,0,5,0"/>
                    <TextBlock Text="Export Report"/>
                </StackPanel>
            </Button>
        </Grid>
        
        <!-- Message when no report is generated with enhanced styling -->
        <Border Grid.Row="1" 
                Background="#F9F9F9"
                CornerRadius="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="40,30"
                Margin="0,20,0,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsReportGenerated}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <iconPacks:PackIconMaterial Kind="ChartBarStacked"
                                        Width="48"
                                        Height="48"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,20"
                                        Foreground="#AAAAAA"/>
                <TextBlock Text="Select a report type and date range" 
                        HorizontalAlignment="Center" 
                        FontSize="18"
                        Foreground="#555555"/>
                <TextBlock Text="Then click 'Generate Report' to view data" 
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="#777777"
                        Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
