<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Page_Navigation_App.View.Reports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Reports"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"/>
        
        <!-- Add report interface elements here -->
        <StackPanel Margin="20,80,20,20">
            <ComboBox Name="ReportType" 
                      Style="{StaticResource MahApps.Styles.ComboBox}"
                      Margin="0,10"
                      mah:TextBoxHelper.Watermark="Select Report Type">
                <ComboBoxItem Content="Sales Report"/>
                <ComboBoxItem Content="Inventory Report"/>
                <ComboBoxItem Content="Customer Report"/>
                <ComboBoxItem Content="Financial Report"/>
            </ComboBox>
            
            <mah:DateTimePicker Name="StartDate" 
                               Style="{StaticResource MahApps.Styles.DateTimePicker}"
                               Margin="0,10"
                               mah:TextBoxHelper.Watermark="Start Date"/>
            
            <mah:DateTimePicker Name="EndDate" 
                               Style="{StaticResource MahApps.Styles.DateTimePicker}"
                               Margin="0,10"
                               mah:TextBoxHelper.Watermark="End Date"/>
            
            <Button Content="Generate Report" 
                    Margin="0,20"
                    Style="{StaticResource MahApps.Styles.Button.Square}"
                    Command="{Binding GenerateReportCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>