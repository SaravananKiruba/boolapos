<![CDATA[<UserControl x:Class="Page_Navigation_App.View.RateMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Rate Entry Form -->
        <materialDesign:Card Grid.Row="0" Grid.Column="0" 
                            Margin="0 0 10 20" 
                            Padding="20">
            <StackPanel>
                <TextBlock Text="Metal Rate Entry"
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Margin="0 0 0 20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              Margin="0 0 10 0"
                              materialDesign:HintAssist.Hint="Metal Type"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              ItemsSource="{Binding MetalTypes}"
                              SelectedItem="{Binding SelectedRate.MetalType}"/>

                    <ComboBox Grid.Column="1"
                              Margin="10 0"
                              materialDesign:HintAssist.Hint="Purity"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              ItemsSource="{Binding Purities}"
                              SelectedItem="{Binding SelectedRate.Purity}"/>

                    <TextBox Grid.Column="2"
                             Margin="10 0 0 0"
                             materialDesign:HintAssist.Hint="Rate (per gram)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding SelectedRate.Rate, StringFormat=N2}"/>
                </Grid>

                <Grid Margin="0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Margin="0 0 10 0"
                             materialDesign:HintAssist.Hint="Purchase Rate"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding SelectedRate.PurchaseRate, StringFormat=N2}"/>

                    <TextBox Grid.Column="1"
                             Margin="10 0 0 0"
                             materialDesign:HintAssist.Hint="Sale Rate"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding SelectedRate.SaleRate, StringFormat=N2}"/>
                </Grid>

                <TextBox Margin="0 0 0 20"
                         materialDesign:HintAssist.Hint="Notes"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding SelectedRate.Notes}"/>

                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ClearCommand}"
                            Content="Clear"
                            Margin="0 0 10 0"/>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding AddOrUpdateCommand}"
                            Content="Save Rate"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- Current Rates Display -->
        <materialDesign:Card Grid.Row="0" Grid.Column="1"
                            MinWidth="300"
                            Margin="10 0 0 20"
                            Padding="20">
            <StackPanel>
                <TextBlock Text="Live Rates"
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Margin="0 0 0 20"/>

                <ItemsControl ItemsSource="{Binding Rates}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0 0 0 10" 
                                              Padding="10"
                                              Background="{DynamicResource MaterialDesignBackground}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{Binding MetalType}"
                                                 FontWeight="Bold"/>
                                        <TextBlock>
                                            <Run Text="{Binding Purity}"/>
                                            <Run Text=" - â‚¹"/>
                                            <Run Text="{Binding Rate, StringFormat=N2}"/>
                                            <Run Text="/g"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <materialDesign:PackIcon Grid.Column="1"
                                                         Kind="TrendingUp"
                                                         Width="24" Height="24"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource PrimaryBrush}"/>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </materialDesign:Card>

        <!-- Rate History Chart -->
        <materialDesign:Card Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                            Margin="0 20 0 0"
                            Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Rate History"
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                          Margin="0 0 0 20"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding RateHistory}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date"
                                          Binding="{Binding EffectiveDate, StringFormat=d}"/>
                        <DataGridTextColumn Header="Metal"
                                          Binding="{Binding MetalType}"/>
                        <DataGridTextColumn Header="Purity"
                                          Binding="{Binding Purity}"/>
                        <DataGridTextColumn Header="Rate"
                                          Binding="{Binding Rate, StringFormat=N2}"/>
                        <DataGridTextColumn Header="Purchase Rate"
                                          Binding="{Binding PurchaseRate, StringFormat=N2}"/>
                        <DataGridTextColumn Header="Sale Rate"
                                          Binding="{Binding SaleRate, StringFormat=N2}"/>
                        <DataGridTextColumn Header="Updated By"
                                          Binding="{Binding UpdatedBy}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>]]>