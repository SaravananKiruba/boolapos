<UserControl x:Class="Page_Navigation_App.View.PurchaseOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             xmlns:vm="clr-namespace:Page_Navigation_App.ViewModel"
             xmlns:conv="clr-namespace:Page_Navigation_App.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             d:DataContext="{d:DesignInstance Type=vm:PurchaseOrderVM, IsDesignTimeCreatable=True}">
    
    <UserControl.Resources>
        <conv:CurrencyFormatConverter x:Key="CurrencyConverter" />
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,5,5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,5,5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,5,5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Background" Value="#1976D2" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BBDEFB" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Purchase Orders" FontSize="24" Margin="20" HorizontalAlignment="Center"/>
        
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Purchase Order List">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                          <TextBox Grid.Column="0" Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="5">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Margin" Value="0,5,5,5"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </TextBox.Style>
                            <TextBox.Tag>Search by order number or supplier name</TextBox.Tag>
                        </TextBox>
                        <Button Grid.Column="1" Content="Search" Margin="5,0,0,0" Padding="15,5" 
                                Command="{Binding SearchCommand}" Style="{StaticResource ActionButton}"/>
                    </Grid>
                    
                    <!-- Purchase Orders DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding PurchaseOrders}" 
                              SelectedItem="{Binding SelectedPurchaseOrder}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              AlternatingRowBackground="#F5F5F5" 
                              RowBackground="White"
                              BorderThickness="1" BorderBrush="#E0E0E0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order #" Binding="{Binding PurchaseOrderNumber}" Width="Auto"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding PurchaseDate, StringFormat={}{0:dd-MM-yyyy}}" Width="Auto"/>
                            <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier.SupplierName}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            <DataGridTextColumn Header="Total Amount" Width="Auto">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                        <Binding Path="TotalAmount"/>
                                        <Binding Source="₹"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Paid" Width="Auto">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                        <Binding Path="PaidAmount"/>
                                        <Binding Source="₹"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Balance" Width="Auto">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                        <Binding Path="BalanceAmount"/>
                                        <Binding Source="₹"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Payment Status" Binding="{Binding PaymentStatus}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Order Details -->
                    <GroupBox Grid.Row="2" Header="Order Details" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Order Information -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="Order #:"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPurchaseOrder.PurchaseOrderNumber}"
                                           VerticalAlignment="Center" Margin="5"/>
                                
                                <Label Grid.Row="0" Grid.Column="2" Content="Supplier:"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding SelectedPurchaseOrder.Supplier.SupplierName}"
                                           VerticalAlignment="Center" Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Status:"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPurchaseOrder.Status}"
                                           VerticalAlignment="Center" Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="2" Content="Payment Status:"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding SelectedPurchaseOrder.PaymentStatus}"
                                           VerticalAlignment="Center" Margin="5"/>
                            </Grid>
                            
                            <!-- Items in this order -->
                            <DataGrid Grid.Row="1" ItemsSource="{Binding OrderItems}" 
                                      AutoGenerateColumns="False" IsReadOnly="True" Margin="0,10"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      AlternatingRowBackground="#F5F5F5"
                                      RowBackground="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*"/>
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                                    <DataGridTextColumn Header="Unit Price" Width="Auto">
                                        <DataGridTextColumn.Binding>
                                            <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                                <Binding Path="UnitPrice"/>
                                                <Binding Source="₹"/>
                                            </MultiBinding>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Total" Width="Auto">
                                        <DataGridTextColumn.Binding>
                                            <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                                <Binding Path="TotalPrice"/>
                                                <Binding Source="₹"/>
                                            </MultiBinding>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Complete Order" Command="{Binding CompletePurchaseOrderCommand}" 
                                        Style="{StaticResource ActionButton}" Margin="5"/>
                                <Button Content="Create Expense Entry" Command="{Binding CreateExpenseCommand}" 
                                        Style="{StaticResource ActionButton}" Margin="5"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <TabItem Header="Create Purchase Order">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Order Form -->
                    <GroupBox Grid.Column="0" Header="Purchase Order Details">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Supplier Selection -->
                            <Label Grid.Row="0" Grid.Column="0" Content="Supplier:"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding Suppliers}"
                                      SelectedItem="{Binding SelectedSupplier}"
                                      DisplayMemberPath="SupplierName"/>
                            
                            <!-- Add Product Section -->
                            <Label Grid.Row="1" Grid.Column="0" Content="Product:"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                      ItemsSource="{Binding Products}"
                                      SelectedItem="{Binding SelectedProduct}"
                                      DisplayMemberPath="ProductName"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Content="Quantity:"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Quantity, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Label Grid.Row="3" Grid.Column="0" Content="Unit Price (₹):"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding UnitPrice, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Label Grid.Row="4" Grid.Column="0" Content="Total Price (₹):"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TotalPrice, StringFormat=N2}" IsReadOnly="True" Background="#F5F5F5"/>
                            
                            <Button Grid.Row="5" Grid.Column="1" Content="Add Item" Command="{Binding AddItemCommand}"
                                    Style="{StaticResource ActionButton}" HorizontalAlignment="Left"/>
                            
                            <!-- Notes -->
                            <Label Grid.Row="6" Grid.Column="0" Content="Notes:" VerticalAlignment="Top"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True" TextWrapping="Wrap" Height="80" VerticalAlignment="Top"/>
                            
                            <!-- Payment Details -->
                            <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="Total Amount (₹):"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TotalOrderAmount, StringFormat=N2}" IsReadOnly="True"
                                         Background="#F5F5F5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="Paid Amount (₹):"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PaidAmount, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="Balance (₹):"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding BalanceAmount, StringFormat=N2}" IsReadOnly="True"
                                         Background="#F5F5F5"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Content="Payment Method:"/>
                                <ComboBox Grid.Row="3" Grid.Column="1" SelectedItem="{Binding PaymentMethod}"
                                          SelectedIndex="0">
                                    <ComboBoxItem>Cash</ComboBoxItem>
                                    <ComboBoxItem>Bank Transfer</ComboBoxItem>
                                    <ComboBoxItem>Credit Card</ComboBoxItem>
                                    <ComboBoxItem>Cheque</ComboBoxItem>
                                    <ComboBoxItem>UPI</ComboBoxItem>
                                </ComboBox>
                                
                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Create Purchase Order" Command="{Binding CreatePurchaseOrderCommand}"
                                            Style="{StaticResource ActionButton}"/>
                                    <Button Content="Clear Form" Command="{Binding ClearFormCommand}"
                                            Style="{StaticResource ActionButton}" Background="#F44336"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Right Side - Order Items -->
                    <GroupBox Grid.Column="1" Header="Order Items">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <DataGrid Grid.Row="0" ItemsSource="{Binding OrderItems}" 
                                      SelectedItem="{Binding SelectedOrderItem}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column" 
                                      AlternatingRowBackground="#F5F5F5"
                                      RowBackground="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*"/>
                                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                                    <DataGridTextColumn Header="Unit Price" Width="Auto">
                                        <DataGridTextColumn.Binding>
                                            <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                                <Binding Path="UnitPrice"/>
                                                <Binding Source="₹"/>
                                            </MultiBinding>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Total" Width="Auto">
                                        <DataGridTextColumn.Binding>
                                            <MultiBinding Converter="{StaticResource CurrencyConverter}">
                                                <Binding Path="TotalPrice"/>
                                                <Binding Source="₹"/>
                                            </MultiBinding>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <Button Grid.Row="1" Content="Remove Item" Command="{Binding RemoveItemCommand}"
                                    Style="{StaticResource ActionButton}" Background="#F44336" 
                                    HorizontalAlignment="Right" Margin="0,10,0,0"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
